<script>
  document.addEventListener('DOMContentLoaded', () => {
    // --- 1. DAY COUNTER LOGIC (Day X of 365) ---
    // This logic relies on ID 'js-day-counter' existing in HTML
    const counterEl = document.getElementById('js-day-counter');
    if(counterEl) {
      const now = new Date();
      // Month is 0-indexed (0 = Jan). Date(Year, 0, 0) gives Dec 31st of previous year.
      const start = new Date(now.getFullYear(), 0, 0);
      const diff = now - start;
      const oneDay = 1000 * 60 * 60 * 24;
      const day = Math.floor(diff / oneDay);
      counterEl.innerText = "DAY " + day + " OF 365";
    }

    // --- 2. CART LOGIC (Standard) ---
    let selectedVariantId = null;
    const options = document.querySelectorAll('.js-gc-option');
    const mainBtn = document.querySelector('.js-gc-main-btn');

    options.forEach(opt => {
      opt.addEventListener('click', () => {
        // Visual Selection
        options.forEach(o => o.classList.remove('is-selected'));
        opt.classList.add('is-selected');
        
        // Data logic
        selectedVariantId = opt.getAttribute('data-variant-id');
        
        // Button State
        if (mainBtn) {
            mainBtn.disabled = false;
            mainBtn.innerText = "SEND THE FUEL"; 
        }
      });
    });

    if(mainBtn) {
      mainBtn.addEventListener('click', async (e) => {
        e.preventDefault();
        if(!selectedVariantId) return;

        const originalText = mainBtn.innerText;
        mainBtn.innerText = "ADDING...";
        mainBtn.disabled = true;
        mainBtn.style.opacity = "0.8";

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ items: [{ id: Number(selectedVariantId), quantity: 1 }] })
          });

          if(response.ok) {
            const cart = await response.json();
            
            // Success - Green with hard shadow
            mainBtn.style.background = "#2E7D32"; // Success green
            mainBtn.style.boxShadow = "0 6px 0 #1B5E20";
            mainBtn.innerText = "ADDED! ü•ä";
            
            // Shopify Events (for drawer carts, etc)
            document.dispatchEvent(new CustomEvent('cart:updated', { detail: { cart } }));
            document.dispatchEvent(new CustomEvent('ajaxCart.itemAdded', { detail: { cart } }));
            
            setTimeout(() => {
              mainBtn.style.background = ""; 
              mainBtn.style.boxShadow = ""; 
              mainBtn.innerText = originalText;
              mainBtn.disabled = false;
              mainBtn.style.opacity = "1";
            }, 2000);
          } else {
             throw new Error('Cart add failed');
          }
        } catch (err) {
          console.error(err);
          mainBtn.style.background = "#B71C1C"; 
          mainBtn.innerText = "ERROR";
          setTimeout(() => { 
              mainBtn.style.background = ""; 
              mainBtn.innerText = originalText; 
              mainBtn.disabled = false; 
              mainBtn.style.opacity = "1";
          }, 3000);
        }
      });
    }
  });
</script>