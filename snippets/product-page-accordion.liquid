{%- assign accordion_section = product.sections['1651782024a70736a3'] -%}
{%- if accordion_section and accordion_section.disabled == false -%}
{% capture plus_icon %}<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x plus-icon" aria-hidden="true"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>{% endcapture %}
{% capture minus_icon %}<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x minus-icon" aria-hidden="true"><line x1="18" y1="6" x2="6" y2="18"></line></svg>{% endcapture %}
{% capture chevron_down %}<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-down chevron-down"><polyline points="6 9 12 15 18 9"></polyline></svg>{% endcapture %}
{% capture chevron_up %}<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-down chevron-up"><polyline points="6 9 12 15 18 9"></polyline></svg>{% endcapture %}
<style>.accordion-faq--{{ accordion_section.id }} {color: {{ accordion_section.settings.text-color }}; background-color: {{ accordion_section.settings.background-color }};}.accordion-container .title-bar {text-align: left;margin-bottom: 10px;text-transform: none;font-family: var(--body-font-stack);font-size: 1.2rem;}.accordion-container .title-bar p {margin-bottom: 0;}.accordion-faq--{{ accordion_section.id }} .accordion-content {border-bottom: 1px solid {{ accordion_section.settings.text-color }};}.accordion-content summary {padding: 1rem 0;font-weight: 600;list-style-type: none;display: flex;justify-content: space-between;align-items: center;}.accordion-faq--{{ accordion_section.id }} .feather-x {transform: rotate(45deg);}.accordion-faq--{{ accordion_section.id }} .chevron-up {transform: rotate(180deg);}.accordion-faq--{{ accordion_section.id }} .feather-x,.accordion-faq--{{ accordion_section.id }} .feather-chevron-down {width: var(--body-font-size);height: var(--body-font-size);color: {{ accordion_section.settings.text-color }};}.accordion-faq--{{ accordion_section.id }} details summary .minus-icon,.accordion-faq--{{ accordion_section.id }} details summary .chevron-up {display: none;}.accordion-faq--{{ accordion_section.id }} details[open] summary .plus-icon,.accordion-faq--{{ accordion_section.id }} details[open] summary .chevron-down {display: none;}.accordion-faq--{{ accordion_section.id }} details[open] summary .minus-icon,.accordion-faq--{{ accordion_section.id }} details[open] summary .chevron-up {display: block;}.accordion-container--product {max-width: 1480px;margin: 0 auto;padding: 15px 50px 15px 66px;width: 100%;}@media (max-width: 768px) {.accordion-container--product {padding: 32px;}}</style>
<section class="accordion--faq-wrapper accordion-faq--{{ accordion_section.id }}" data-wetheme-section-type="accordion--faq" data-wetheme-section-id="{{ accordion_section.id }}">
  <div class="accordion-container accordion-container--product">
    {% unless accordion_section.settings.title == blank %}<div class="title-bar custom-font"><p>{{ accordion_section.settings.title }}</p></div>{% endunless %}
    {% for block in accordion_section.blocks %}
      {% unless block.settings.text == blank and block.settings.question == blank %}
        <details class="accordion-content">
          <summary role="button" aria-expanded="false" tabindex="0">{{ block.settings.question }}<span>{% if accordion_section.settings.faq_icon == "plus_minus" %}{{ plus_icon }}{{ minus_icon }}{% elsif accordion_section.settings.faq_icon == "caret" %}{{ chevron_down }}{{ chevron_up }}{% endif %}</span></summary>
          {{ block.settings.text }}
        </details>
      {% endunless %}
      <style>{% if accordion_section.settings.title == blank %}.accordion-faq--{{ accordion_section.id }} details:first-of-type summary {padding-top: 0;}{% endif %}</style>
    {% endfor %}
  </div>
</section>
{%- endif -%}