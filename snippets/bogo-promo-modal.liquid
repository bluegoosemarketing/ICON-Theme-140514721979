{%- comment -%}
  BOGO Promo Modal (V3.14 - Final Version)
  - REMOVED: The non-functional 'X' close button and its associated CSS have been completely removed
    to simplify the component and eliminate the source of the error.
  - REFINED: The JavaScript now uses a single, explicit listener on the overlay for the "click outside"
    close functionality, which is guaranteed to work without interfering with the CTA link.
  - The modal now has two reliable ways to close: clicking the background overlay or pressing the Escape key.
{%- endcomment -%}

<style>
  .bogo-promo-modal-v3 {
    --bogo-modal-font-stack: var(--font-stack-header, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif);
    --bogo-modal-button-font-stack: var(--font-stack-body, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif);
    --bogo-modal-brand-color: {{ settings.color_primary | default: '#d42828' }};

    position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 9999;
    display: flex; align-items: center; justify-content: center;
    opacity: 0; visibility: hidden;
    transition: opacity 0.3s ease, visibility 0s 0.3s;
    font-family: var(--bogo-modal-font-stack);
  }
  .bogo-promo-modal-v3.is-open { opacity: 1; visibility: visible; transition-delay: 0s; }

  .bogo-promo-modal-v3__overlay {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    background-color: rgba(20, 20, 20, 0.7);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    cursor: pointer;
  }

  .bogo-promo-modal-v3__dialog {
    position: relative;
    background-color: #ffffff;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    width: 90%;
    max-width: 500px;
    text-align: center;
    transform: scale(0.95) translateY(10px);
    transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    overflow: hidden;
    cursor: auto;
  }
  .bogo-promo-modal-v3.is-open .bogo-promo-modal-v3__dialog { transform: scale(1) translateY(0px); }

  .bogo-promo-modal-v3__header {
    padding: 2rem 2.5rem 0;
    position: relative;
  }

  .bogo-promo-modal-v3__headline {
    font-family: var(--bogo-modal-font-stack);
    font-size: 1.875rem;
    font-weight: 800;
    line-height: 1.2;
    color: #111827;
    letter-spacing: -0.02em;
    margin: 0 0 1.5rem 0;
  }
  
  .bogo-promo-modal-v3__body {
    padding: 0 2.5rem 2.5rem;
  }
  
  .bogo-promo-modal-v3__steps-list {
    list-style: none; margin: 0; padding: 0;
    display: flex; flex-direction: column; gap: 1.5rem;
    text-align: left;
    position: relative;
  }
  
  .bogo-promo-modal-v3__steps-list::before {
    content: '';
    position: absolute;
    left: 19px;
    top: 20px;
    bottom: 20px;
    width: 2px;
    background-color: #e5e7eb;
    z-index: 1;
  }

  .bogo-promo-modal-v3__step-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    position: relative;
    z-index: 2;
  }

  .bogo-promo-modal-v3__step-icon {
    flex-shrink: 0; width: 40px; height: 40px;
    background-color: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 50%;
    display: flex; align-items: center; justify-content: center;
    color: #4b5563;
    font-size: 1.125rem;
    font-weight: 700;
    font-family: var(--bogo-modal-font-stack);
    transition: all 0.2s ease;
  }
  
  .bogo-promo-modal-v3__step-text strong {
    display: block; font-size: 1.125rem; font-weight: 700;
    font-family: var(--bogo-modal-font-stack);
    color: #1f2937; margin-bottom: 0.25rem;
  }
  .bogo-promo-modal-v3__step-text p {
    font-size: 0.95rem; line-height: 1.5; color: #6b7280;
    font-family: var(--bogo-modal-font-stack);
    margin: 0;
  }
  
  .bogo-promo-modal-v3__footer {
    padding: 1.5rem 2.5rem;
    background-color: #f9fafb;
    border-top: 1px solid #f3f4f6;
  }

  .bogo-promo-modal-v3__cta {
    display: block;
    width: 100%;
    padding: 0.9rem 2rem !important;
    font-family: var(--bogo-modal-button-font-stack);
    font-size: 1rem !important;
    font-weight: 700 !important;
    color: #fff !important;
    background-color: var(--bogo-modal-brand-color);
    border-radius: 8px;
    text-decoration: none !important;
    text-align: center;
    transition: all 0.2s ease;
  }
  .bogo-promo-modal-v3__cta:hover {
    background-color: #a71f1f;
    transform: translateY(-2px);
    color: #fff !important;
  }

  @media(max-width: 767px) {
    .bogo-promo-modal-v3__header { padding: 1.5rem 1.5rem 0; }
    .bogo-promo-modal-v3__body { padding: 0 1.5rem 2rem; }
    .bogo-promo-modal-v3__footer { padding: 1.25rem 1.5rem; }
    .bogo-promo-modal-v3__headline { font-size: 1.5rem; margin-bottom: 2.2rem; }
  }
</style>

<div class="bogo-promo-modal-v3 hidden" data-bogo-announcement-modal>
  <div class="bogo-promo-modal-v3__overlay" data-bogo-modal-overlay></div>
  <div class="bogo-promo-modal-v3__dialog" role="dialog" aria-modal="true">
    
    <div class="bogo-promo-modal-v3__header">
      <h2 class="bogo-promo-modal-v3__headline">{{ modal_headline }}</h2>
    </div>
    
    <div class="bogo-promo-modal-v3__body">
      <ul class="bogo-promo-modal-v3__steps-list">
        <li class="bogo-promo-modal-v3__step-item">
          <div class="bogo-promo-modal-v3__step-icon">1</div>
          <div class="bogo-promo-modal-v3__step-text">
            <strong>{{ modal_step1_title }}</strong>
            <p>{{ modal_step1_desc }}</p>
          </div>
        </li>
        <li class="bogo-promo-modal-v3__step-item">
          <div class="bogo-promo-modal-v3__step-icon">2</div>
          <div class="bogo-promo-modal-v3__step-text">
            <strong>{{ modal_step2_title }}</strong>
            <p>{{ modal_step2_desc }}</p>
          </div>
        </li>
        <li class="bogo-promo-modal-v3__step-item">
          <div class="bogo-promo-modal-v3__step-icon">3</div>
          <div class="bogo-promo-modal-v3__step-text">
            <strong>{{ modal_step3_title }}</strong>
            <p>{{ modal_step3_desc }}</p>
          </div>
        </li>
      </ul>
    </div>

    <div class="bogo-promo-modal-v3__footer">
      <a href="{{ modal_button_link | default: "https://iconmeals.com/collections/signature-menu/" }}" class="bogo-promo-modal-v3__cta">{{ modal_button_text }}</a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (window.bogoModalInitialized) return;
    window.bogoModalInitialized = true;
    
    const trigger = document.querySelector('[data-bogo-announcement-trigger]');
    const modal = document.querySelector('[data-bogo-announcement-modal]');
    
    if (!trigger || !modal) return;

    const overlay = modal.querySelector('[data-bogo-modal-overlay]');
    
    const openModal = () => {
      trigger.blur(); 
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      setTimeout(() => {
        modal.classList.add('is-open');
      }, 10);
    };

    const closeModal = () => {
      modal.classList.remove('is-open');
      document.body.style.overflow = '';
      setTimeout(() => modal.classList.add('hidden'), 300);
    };

    trigger.addEventListener('click', openModal);
    
    // Listener for the overlay
    if (overlay) {
      overlay.addEventListener('click', function(event) {
        // Only close if the click is directly on the overlay itself
        if (event.target === this) {
          closeModal();
        }
      });
    }
    
    // Listener for the Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal.classList.contains('is-open')) {
        closeModal();
      }
    });
  });
</script>