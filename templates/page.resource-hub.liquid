<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Teko:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
  :root {
    --rh-black: #0a0a0a;
    --rh-white: #ffffff;
    --rh-red: #D11F1F;
    --rh-head: 'Teko', sans-serif;
    --rh-body: 'Inter', sans-serif;
  }

  .rh-page {
    background: var(--rh-white);
    color: var(--rh-black);
    font-family: var(--rh-body);
    overflow-x: hidden;
  }

  /* --- UTILITIES --- */
  .rh-breakout {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
  
  .rh-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* --- HERO SECTION --- */
  .rh-hero {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    align-items: center;
    gap: 0;
    padding: 60px 0 80px;
    background-color: #ffffff; /* FIXED: Pure white to match page */
  }

  .rh-hero-text {
    padding-right: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .rh-hero-tagline {
    color: var(--rh-red);
    font-family: var(--rh-body);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    display: block;
    line-height: 1;
  }

  .rh-hero-headline {
    font-family: var(--rh-head);
    font-size: clamp(4rem, 8vw, 9rem);
    line-height: 0.85;
    text-transform: uppercase;
    margin: 0 0 2.5rem 0;
    color: var(--rh-black);
    font-weight: 700;
    margin-left: -5px;
  }

  .rh-text-solid { 
    display: block; 
    color: var(--rh-black);
  }
  
  .rh-text-slab { 
    display: block; 
    color: #ffffff;
    -webkit-text-stroke: 3px var(--rh-black);
    filter: drop-shadow(4px 6px 0px rgba(0,0,0,0.15));
    paint-order: stroke fill;
    transform: scale(1.02);
    transform-origin: left;
  }

  .rh-hero-desc {
    font-family: var(--rh-body);
    font-size: 1.15rem;
    line-height: 1.7;
    color: #4a4a4a;
    max-width: 520px;
    margin-bottom: 3rem;
    border-left: 3px solid var(--rh-red);
    padding-left: 1.8rem;
    margin-left: 2px;
  }

  /* VISUAL RIGHT SIDE */
  .rh-hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 500px;
  }

  .rh-ring {
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 550px; height: 550px;
    border: 1px solid rgba(209, 31, 31, 0.15);
    border-radius: 50%;
    z-index: 0;
  }
  .rh-ring::after {
    content: ''; position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 480px; height: 480px;
    border: 1px dashed rgba(0,0,0,0.1);
    border-radius: 50%;
  }

  .rh-hero-img {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 750px;
    height: auto;
    object-fit: contain;
    transform: rotate(-2deg); 
    filter: drop-shadow(0 30px 50px rgba(0,0,0,0.15));
  }

  .rh-badge {
    position: absolute;
    top: 0;
    right: 10%;
    width: 120px;
    height: auto;
    z-index: 3;
    filter: drop-shadow(0 4px 10px rgba(0,0,0,0.1));
  }

  /* --- CATEGORY GRID (FIXED: Left Align + No Underlines) --- */
  .rh-categories {
    background: #ffffff;
    padding: 0 0 60px 0;
    border-bottom: 1px solid #e5e5e5;
    position: relative;
    z-index: 10;
  }

  .rh-cat-grid {
    max-width: 1600px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
  }

  .rh-cat-card {
    display: flex;
    flex-direction: row; /* FIXED: Row layout */
    justify-content: space-between; /* FIXED: Push arrow to right */
    align-items: center; /* Center vertically */
    text-align: left; /* FIXED: Left align text */
    background: #fff;
    padding: 3.5rem 3rem; 
    text-decoration: none !important; /* FIXED: Force remove underline */
    color: #000;
    border-right: 1px solid #e5e5e5;
    transition: all 0.2s ease;
  }
  .rh-cat-card * { text-decoration: none !important; } /* Nuclear option */
  
  .rh-cat-card:last-child { border-right: none; }

  .rh-cat-card:hover {
    background: #f8f8f8;
    z-index: 2;
  }

  /* Text Wrapper for Left Alignment */
  .rh-cat-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .rh-cat-sub {
    font-family: var(--rh-body);
    font-size: 0.85rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--rh-red);
    margin-bottom: 8px;
    display: block;
  }

  .rh-cat-title {
    font-family: var(--rh-head);
    font-size: 3rem;
    font-weight: 600;
    line-height: 0.9;
    text-transform: uppercase;
    color: var(--rh-black);
    display: block;
  }
  
  .rh-arrow { 
    color: #ccc; 
    transition: transform 0.2s, color 0.2s; 
    font-size: 2rem; /* Bigger arrow */
    line-height: 1;
    font-family: sans-serif;
  }
  
  .rh-cat-card:hover .rh-arrow { transform: translateX(8px); color: var(--rh-red); }

  /* --- VIDEO SECTION --- */
  .rh-video-section {
    background: #fff;
    color: var(--rh-black);
    padding: 100px 0;
    border-top: 1px solid #e5e5e5;
  }

  .rh-video-container {
    max-width: 1300px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 0.8fr;
    gap: 80px;
    align-items: center;
    padding: 0 40px;
  }

  .rh-video-title {
    font-family: var(--rh-head);
    font-size: clamp(3.5rem, 6vw, 5rem);
    line-height: 0.9;
    margin: 0 0 25px;
    color: var(--rh-black);
    text-transform: uppercase;
    font-weight: 700;
  }

  .rh-video-quote {
    font-size: 1.3rem;
    line-height: 1.5;
    font-style: italic;
    color: #333;
    margin-bottom: 30px;
    padding-left: 20px;
    border-left: 4px solid var(--rh-red);
    font-weight: 500;
  }

  .rh-video-author {
    font-size: 1.1rem;
    font-weight: 800;
    color: var(--rh-red);
    text-transform: uppercase;
    font-family: var(--rh-body);
    letter-spacing: 1px;
  }
  .rh-video-author span { display: block; font-size: 0.9rem; color: #666; font-weight: 600; text-transform: none; margin-top: 4px; letter-spacing: 0; }

  .rh-video-wrapper {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .rh-phone-outer {
    width: 100%;
    max-width: 360px;
    aspect-ratio: 9 / 16;
    background: #000;
    border-radius: 40px;
    border: 8px solid #111;
    box-shadow: 0 30px 60px rgba(0,0,0,0.15);
    position: relative;
    overflow: hidden;
  }

  .rh-phone-screen {
    width: 100%;
    height: 100%;
    position: relative;
    background: #000;
  }

  .rh-phone-screen iframe {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    object-fit: cover;
  }

  /* --- MOBILE --- */
  @media (max-width: 1024px) {
    .rh-hero { grid-template-columns: 1fr; gap: 40px; padding: 40px 0 60px; text-align: center; }
    .rh-hero-text { padding-right: 0; padding-bottom: 2rem; }
    .rh-hero-tagline { justify-content: center; }
    .rh-hero-headline { font-size: 4.5rem; margin-left: 0; }
    .rh-text-slab { transform-origin: center; }
    .rh-hero-desc { margin: 0 auto 30px; border-left: none; padding-left: 0; text-align: center; }
    
    .rh-hero-visual { min-height: auto; }
    .rh-ring { width: 320px; height: 320px; }
    .rh-ring::after { width: 280px; height: 280px; }
    .rh-hero-img { max-width: 100%; transform: rotate(0deg); }
    .rh-badge { top: -10px; right: 5%; width: 80px; }

    /* Category Mobile Stack */
    .rh-cat-grid { grid-template-columns: 1fr; border-top: none; }
    .rh-cat-card { 
      border-right: none; border-bottom: 1px solid #e5e5e5; 
      padding: 2rem; 
      /* Keep side-by-side layout even on mobile for consistency, or stack if preferred */
      flex-direction: row; 
      text-align: left;
      align-items: center;
    }
    .rh-cat-title { font-size: 2rem; }

    .rh-video-container { grid-template-columns: 1fr; text-align: center; gap: 40px; }
    .rh-video-quote { border-left: none; border-top: 3px solid var(--rh-red); padding-top: 20px; padding-left: 0; margin: 0 auto 30px; }
  }
</style>

