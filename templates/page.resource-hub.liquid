<script>
  // --- SALE BANNER LOGIC ---
  (function() {
    const now = new Date();
    const saleEnd = new Date('2026-01-12T03:00:00'); 
    const urgencyStart = new Date('2026-01-10T00:00:00'); 
    const panicStart = new Date('2026-01-11T12:00:00'); 

    const notifyBox = document.getElementById('im-smart-notify');
    const notifyText = document.getElementById('im-notify-text');
    const badge = document.querySelector('.im-sale-badge');

    function cleanLinks() {
      const saleLinks = document.querySelectorAll('.js-sale-link');
      saleLinks.forEach(link => {
        let href = link.getAttribute('href');
        if(href && href.includes('?discount=YEAR26')) {
           link.setAttribute('href', href.replace('?discount=YEAR26', ''));
        }
      });
    }

    if (now > saleEnd) {
      if(notifyBox) notifyBox.style.display = 'none';
      cleanLinks();
    } else {
      if(notifyBox) notifyBox.style.display = 'inline-block';

      if (now < urgencyStart) {
        notifyText.innerHTML = "Save 26% on your order with code <span class='im-code-text'>YEAR26</span>.";
      } 
      else if (now >= urgencyStart && now < panicStart) {
        if(badge) badge.innerText = "Ending Soon";
        notifyText.innerHTML = "Final weekend to save 26% on your order (Code: <span class='im-code-text'>YEAR26</span>).";
      } 
      else {
        if(badge) badge.innerText = "Ends Tonight";
        notifyText.innerHTML = "Use code <span class='im-code-text'>YEAR26</span> before midnight to save 26%.";
      }
    }
  })();

  // --- VIDEO MODAL LOGIC ---
  var modal = document.getElementById("im-video-modal");
  var modalIframe = document.getElementById("im-modal-iframe");
  var baseSrc = modalIframe.src;

  function openVideoModal() {
    modal.classList.add("show-modal");
    // Optional: Autoplay when opening
    // modalIframe.src = baseSrc + "&autoplay=1";
  }

  function closeVideoModal(e) {
    // Close if clicked overlay or close button
    if (e.target === modal || e.target.classList.contains('rh-close-modal')) {
        modal.classList.remove("show-modal");
        
        // Stop video playback by resetting src
        var tempSrc = modalIframe.src;
        modalIframe.src = '';
        modalIframe.src = baseSrc; // Reset to original without autoplay
    }
  }
</script>