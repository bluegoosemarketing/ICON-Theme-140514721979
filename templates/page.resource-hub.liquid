<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Teko:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
  :root {
    --rh-black: #0a0a0a;
    --rh-white: #ffffff;
    --rh-red: #D11F1F;
    --rh-bright-red: #ff4444; 
    --rh-green: #2ecc71;       
    --rh-grey-bg: #f4f4f5;     
    --rh-dot-color: #cbd5e1;
    --rh-head: 'Teko', sans-serif;
    --rh-body: 'Inter', sans-serif;
  }

  .rh-page {
    background: var(--rh-white);
    color: var(--rh-black);
    font-family: var(--rh-body);
    overflow-x: hidden;
  }

  /* --- UTILITIES --- */
  .rh-breakout {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
    
  .rh-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* --- HERO SECTION --- */
  .rh-hero {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 0 60px;
    position: relative;
    background-color: #ffffff;
    overflow: hidden; 
  }

  /* BACKGROUND */
  .rh-hero::before {
    content: '';
    position: absolute;
    inset: 0; 
    width: 100%; height: 100%;
    background-image: radial-gradient(var(--rh-dot-color) 1.5px, transparent 1.5px);
    background-size: 30px 30px; 
    -webkit-mask-image: radial-gradient(circle at 50% 50%, transparent 10%, black 85%);
    mask-image: radial-gradient(circle at 50% 50%, transparent 10%, black 85%);
    opacity: 0.6; 
    z-index: 0;
    pointer-events: none;
  }

  .rh-hero-inner {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    align-items: center;
    width: 100%;
    max-width: 1600px;
    padding: 0 40px;
    position: relative;
    z-index: 2;
  }

  .rh-hero-text {
    padding-right: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative; 
  }

  /* --- SMART SALE NOTIFICATION --- */
  #im-smart-notify {
    display: none; 
    margin-bottom: 2.5rem;
    display: inline-block;
    position: relative;
    padding: 12px 45px 12px 18px; 
    background: #ffffff;
    border: 1px solid #e5e5e5;
    border-left: 4px solid var(--rh-red);
    font-family: var(--rh-body);
    font-size: 0.95rem;
    color: #333;
    line-height: 1.5;
    border-radius: 6px;
    width: fit-content;
    max-width: 100%;
    text-align: left;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05); 
    animation: fadeIn 0.8s ease;
  }
  
  #im-smart-notify:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    border-color: #dcdcdc;
  }
  
  #im-smart-notify strong { color: var(--rh-black); font-weight: 800; }
  
  .im-sale-badge {
    display: inline-block;
    background: var(--rh-red);
    color: #fff;
    padding: 3px 8px;
    border-radius: 3px;
    font-weight: 700;
    font-size: 0.75rem;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    white-space: nowrap;
    margin-right: 8px;
    vertical-align: middle;
    position: relative;
    top: -1px; 
  }
  
  .im-code-text {
    font-weight: 800;
    color: var(--rh-red);
    background: rgba(209, 31, 31, 0.1);
    padding: 0 4px;
    border-radius: 3px;
    white-space: nowrap; 
  }
  
  .im-notify-arrow {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--rh-red);
    font-weight: bold;
    font-size: 1.2rem;
    line-height: 1;
    transition: transform 0.2s ease;
  }
  
  #im-smart-notify:hover .im-notify-arrow {
    transform: translate(4px, -50%);
  }

  @keyframes fadeIn { from { opacity: 0; transform: translateY(-5px); } to { opacity: 1; transform: translateY(0); } }

  .rh-hero-headline {
    font-family: var(--rh-head);
    font-size: clamp(5.5rem, 11vw, 10rem); 
    line-height: 0.85;
    text-transform: uppercase;
    margin: 0 0 2rem 0;
    color: var(--rh-black);
    font-weight: 700;
    margin-left: -3px;
  }

  .rh-text-solid { display: block; color: var(--rh-black); }
    
  .rh-text-slab { 
    display: block; 
    color: #ffffff; 
    -webkit-text-stroke: 3px var(--rh-black);
    filter: drop-shadow(4px 6px 0px rgba(0,0,0,0.1));
    paint-order: stroke fill;
    transform: scale(1.02);
    transform-origin: left;
  }

  .rh-hero-desc {
    font-family: var(--rh-body);
    font-size: 1.15rem;
    line-height: 1.6;
    color: #4a4a4a;
    max-width: 520px;
    margin-bottom: 2.5rem;
  }

  /* VISUAL RIGHT SIDE */
  .rh-hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 500px;
  }

  .rh-ring {
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 580px; height: 580px;
    border: 1px solid rgba(0,0,0,0.08); 
    border-radius: 50%;
    z-index: 0;
  }
  .rh-ring::after {
    content: ''; position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 460px; height: 460px;
    border: 2px solid rgba(209, 31, 31, 0.08); 
    border-radius: 50%;
  }

  .rh-hero-img {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 640px;
    height: auto;
    object-fit: contain;
    filter: none; 
    transform: none; 
  }

  /* --- PRODUCT TAG --- */
  .rh-product-tag {
    position: absolute;
    top: 8%; 
    right: 12%; 
    z-index: 10;
    background: #ffffff;
    padding: 12px 18px 12px 16px;
    border-radius: 6px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    text-decoration: none !important;
    border-left: 4px solid var(--rh-red);
    transform: rotate(-3deg); 
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275); 
    display: flex;
    flex-direction: column;
    min-width: 140px;
  }
  
  .rh-product-tag:hover {
    transform: rotate(0deg) scale(1.05) translateY(-5px);
    box-shadow: 0 15px 40px rgba(209, 31, 31, 0.15);
    border-left-width: 6px;
  }

  .rh-tag-label {
    font-family: var(--rh-body);
    font-size: 0.65rem;
    font-weight: 800;
    text-transform: uppercase;
    color: #999;
    margin-bottom: 2px;
    letter-spacing: 1px;
    display: block;
  }

  .rh-tag-name {
    font-family: var(--rh-head);
    font-size: 1.6rem;
    line-height: 0.9;
    font-weight: 600;
    color: var(--rh-black);
    text-transform: uppercase;
    display: block;
    margin-bottom: 4px;
  }
  
  .rh-tag-cta {
    font-family: var(--rh-body);
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--rh-red);
    text-transform: uppercase;
    display: flex;
    align-items: center;
    gap: 4px;
  }
  
  .rh-tag-cta svg { width: 12px; height: 12px; transition: transform 0.2s; }
  .rh-product-tag:hover .rh-tag-cta svg { transform: translateX(3px); }


  /* --- CEO BANNER --- */
  .rh-ceo-bar {
    background-color: var(--rh-red);
    color: #ffffff;
    text-align: center;
    padding: 18px 20px;
    cursor: pointer;
    transition: background 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-bottom: 0; 
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    position: relative;
    z-index: 20;
  }
  .rh-ceo-bar:hover { background-color: #a81010; }
  .rh-ceo-bar:hover .rh-ceo-text { text-decoration: underline; text-underline-offset: 4px; }

  .rh-ceo-text {
    font-family: var(--rh-head);
    font-size: 1.6rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1;
    position: relative;
    top: 1px;
  }
  
  .rh-play-icon {
    width: 24px;
    height: 24px;
    fill: #fff;
    background: rgba(0,0,0,0.2);
    border-radius: 50%;
    padding: 5px;
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    animation: pulse-white 2s infinite;
  }

  @keyframes pulse-white {
    0% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7); }
    70% { transform: scale(1); box-shadow: 0 0 0 10px rgba(255, 255, 255, 0); }
    100% { transform: scale(0.95); box-shadow: 0 0 0 0 rgba(255, 255, 255, 0); }
  }

  /* --- CATEGORY GRID --- */
  .rh-categories {
    background: #ffffff;
    padding: 0 0 0 0;
    border-bottom: 1px solid #e5e5e5;
    position: relative;
    z-index: 10;
  }

  .rh-cat-grid {
    max-width: 1600px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
  }

  .rh-cat-card {
    display: flex;
    flex-direction: row; 
    justify-content: space-between; 
    align-items: center; 
    text-align: left; 
    background: #fff;
    padding: 3.5rem 3rem; 
    text-decoration: none !important; 
    color: #000;
    border-right: 1px solid #e5e5e5;
    transition: all 0.2s ease;
  }
  .rh-cat-card * { text-decoration: none !important; } 
  .rh-cat-card:last-child { border-right: none; }
  .rh-cat-card:hover { background: #f8f8f8; z-index: 2; }

  .rh-cat-text { display: flex; flex-direction: column; align-items: flex-start; }
  .rh-cat-sub {
    font-family: var(--rh-body);
    font-size: 0.85rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--rh-red);
    margin-bottom: 8px;
    display: block;
  }
  .rh-cat-title {
    font-family: var(--rh-head);
    font-size: 3rem;
    font-weight: 600;
    line-height: 0.9;
    text-transform: uppercase;
    color: var(--rh-black);
    display: block;
  }
  .rh-arrow { 
    color: var(--rh-red); 
    transition: transform 0.2s; 
    font-size: 2.5rem; 
    line-height: 1;
    font-family: sans-serif;
    font-weight: 300;
  }
  .rh-cat-card:hover .rh-arrow { transform: translateX(8px); }

  /* --- NEW SYSTEM VS WILLPOWER SECTION --- */
  .rh-system-section {
    background-color: #050505;
    color: #fff;
    padding: 100px 0;
    position: relative;
    overflow: hidden;
  }
  
  .rh-system-section::before {
    content: '';
    position: absolute;
    top: -100px; left: -100px;
    width: 600px; height: 600px;
    background: radial-gradient(circle, rgba(209,31,31,0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  .rh-sys-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 80px;
    align-items: center;
  }

  .rh-sys-stat-block {
    text-align: left;
    position: relative;
  }
  
  .rh-sys-eyebrow {
    font-family: var(--rh-body);
    font-size: 0.9rem;
    font-weight: 800;
    color: var(--rh-bright-red);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    margin-bottom: 1.5rem;
    display: block;
  }

  .rh-sys-big-stat {
    font-family: var(--rh-head);
    font-size: clamp(8rem, 15vw, 13rem);
    line-height: 0.8;
    font-weight: 700;
    color: #fff;
    display: block;
    margin-left: -8px;
    margin-bottom: 10px;
  }

  .rh-sys-stat-desc {
    font-size: 1.4rem;
    line-height: 1.4;
    font-weight: 500;
    margin-top: 10px;
    max-width: 450px;
    color: #ccc;
  }
  .rh-sys-stat-desc span { 
    color: #fff; 
    font-weight: 700; 
    text-decoration: underline; 
    text-decoration-color: var(--rh-bright-red); 
    text-underline-offset: 4px; 
  }

  /* Comparison HUD Card */
  .rh-sys-hud {
    display: grid;
    grid-template-columns: 1fr 1fr;
    border: 1px solid #222;
    background: #0a0a0a;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0,0,0,0.5);
    position: relative;
  }

  .rh-sys-hud::after {
    content: '';
    position: absolute;
    top: 15%; bottom: 15%;
    left: 50%;
    width: 1px;
    background: #333;
    z-index: 10;
  }

  .rh-sys-col {
    padding: 40px;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .rh-sys-col.fail { background: #0f0f0f; }
  
  .rh-sys-col.success {
    background: linear-gradient(160deg, #1a0505 0%, #0a0a0a 100%);
    position: relative;
  }

  .rh-hud-header {
    font-family: var(--rh-head);
    font-size: 2.2rem;
    text-transform: uppercase;
    line-height: 1;
    margin-bottom: 30px;
    padding-bottom: 20px; 
    display: flex;
    align-items: center;
    justify-content: space-between; 
    gap: 15px;
    border-bottom: 1px solid rgba(255,255,255,0.1); 
  }
  
  .rh-hud-header.rh-muted { color: #888; }
  .rh-hud-header.bright { color: #fff; text-shadow: 0 0 20px rgba(255,255,255,0.1); }

  .rh-status-icon {
    font-size: 1.2rem;
    width: 32px; height: 32px;
    display: flex; align-items: center; justify-content: center;
    border-radius: 50%;
    font-family: var(--rh-body);
    font-weight: 900;
  }
  
  .rh-status-icon.x { 
    background: rgba(255, 50, 50, 0.1); 
    color: var(--rh-bright-red); 
    border: 1px solid rgba(255, 50, 50, 0.2); 
  }
  
  .rh-status-icon.check { 
    background: var(--rh-green); 
    color: #fff; 
    box-shadow: 0 0 15px rgba(46, 204, 113, 0.3); 
  }

  .rh-hud-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .rh-hud-item {
    font-family: var(--rh-body);
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 15px;
    line-height: 1.2;
  }
  
  .rh-bullet {
    width: 8px; height: 8px;
    border-radius: 50%;
    display: block;
    flex-shrink: 0;
  }
  .rh-bullet.bad { background: var(--rh-bright-red); opacity: 0.5; }
  .rh-bullet.good { background: var(--rh-green); box-shadow: 0 0 8px var(--rh-green); }
  
  .rh-hud-item.dim { color: #999; font-weight: 500; text-decoration: none; }
  .rh-hud-item.bold { color: #fff; font-weight: 700; }
  
  /* --- MOBILE GENERAL --- */
  @media (max-width: 1024px) {
    .rh-container { padding: 0 20px; }

    /* Fix Hero Mobile */
    .rh-hero-inner { grid-template-columns: 1fr; padding: 0 20px; text-align: center; }
    
    .rh-hero-text { padding-right: 0; padding-bottom: 2rem; align-items: center; }
    .rh-hero-headline { margin-left: 0; }
    .rh-text-slab { 
      transform-origin: center; 
      -webkit-text-stroke: 1.5px var(--rh-black); 
      color: #ffffff;
    }
    .rh-hero-desc { margin: 0 auto 30px; padding-left: 0; text-align: center; font-size: 1rem; }
    
    #im-smart-notify { width: 100%; max-width: 400px; margin: 0 auto 20px auto; }

    .rh-hero-visual { min-height: auto; padding-left: 0; }
    .rh-ring { width: 320px; height: 320px; }
    .rh-ring::after { width: 280px; height: 280px; }
    .rh-hero-img { max-width: 100%; transform: rotate(0deg); }
    
    /* Mobile Tag Adjustment - Centered & Lifted */
    .rh-product-tag { 
      top: -25px; /* Lifted slightly higher for clearance */
      right: 5%; 
      transform: rotate(0deg); 
      padding: 8px 14px;
      min-width: auto;
      border-left-width: 3px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      
      /* Centering Logic */
      align-items: center; 
      text-align: center;
    }

    .rh-tag-label { font-size: 0.6rem; margin-bottom: 1px; } 
    .rh-tag-name { font-size: 1.1rem; margin-bottom: 3px; } 
    
    .rh-tag-cta { 
      font-size: 0.7rem; 
      /* Center the text and arrow within the flex row */
      justify-content: center; 
      width: 100%;
    } 
    .rh-tag-cta svg { width: 10px; height: 10px; }
    
    .rh-ceo-bar { padding: 15px; }
    .rh-ceo-text { font-size: 1.2rem; }

    .rh-cat-grid { grid-template-columns: 1fr; border-top: none; }
    .rh-cat-card { border-right: none; border-bottom: 1px solid #e5e5e5; padding: 2rem; flex-direction: row; text-align: left; align-items: center; }
    .rh-cat-title { font-size: 2rem; }

    .rh-system-section { padding: 60px 0; }
    .rh-sys-container { grid-template-columns: 1fr; gap: 40px; text-align: left; }
    .rh-sys-stat-block { text-align: center; }
    .rh-sys-big-stat { font-size: 25vw; line-height: 0.9; margin-left: 0; }
    .rh-sys-stat-desc { margin: 10px auto 0 auto; }
    
    .rh-sys-hud { grid-template-columns: 1fr 1fr; gap: 0; }
    .rh-sys-hud::after { top: 10px; bottom: 10px; }
    .rh-sys-col { padding: 20px 15px; }

    .rh-hud-header { 
        font-size: 1.4rem; 
        flex-direction: column-reverse; 
        gap: 8px;
        text-align: center;
        margin-bottom: 15px;
        padding-bottom: 15px;
        justify-content: center;
    }
    .rh-hud-item { font-size: 0.85rem; flex-direction: column; text-align: center; gap: 6px; }

    .rh-video-container { grid-template-columns: 1fr; text-align: center; gap: 40px; }
    .rh-video-quote { border-left: none; border-top: 3px solid var(--rh-red); padding-top: 20px; padding-left: 0; margin: 0 auto 30px; }
  }

  /* --- VIDEO SECTION (Static Bottom) --- */
.rh-video-section {
  background: #fff;
  color: var(--rh-black);
  padding: 100px 0;
  border-top: 1px solid #e5e5e5;
}

.rh-video-container {
  max-width: 1300px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 0.8fr;
  gap: 80px;
  align-items: center;
  padding: 0 40px;
}

.rh-video-title {
  font-family: var(--rh-head);
  font-size: clamp(3.5rem, 6vw, 5rem);
  line-height: 0.9;
  margin: 0 0 25px;
  color: var(--rh-black);
  text-transform: uppercase;
  font-weight: 700;
}

.rh-video-quote {
  font-size: 1.3rem;
  line-height: 1.5;
  font-style: italic;
  color: #333;
  margin-bottom: 30px;
  padding-left: 20px;
  border-left: 4px solid var(--rh-red);
  font-weight: 500;
}

.rh-video-author {
  font-size: 1.1rem;
  font-weight: 800;
  color: var(--rh-red);
  text-transform: uppercase;
  font-family: var(--rh-body);
  letter-spacing: 1px;
}
.rh-video-author span {
  display: block;
  font-size: 0.9rem;
  color: #666;
  font-weight: 600;
  text-transform: none;
  margin-top: 4px;
  letter-spacing: 0;
}

.rh-video-wrapper {
  display: flex;
  justify-content: center;
  width: 100%;
}

.rh-phone-outer {
  width: 100%;
  max-width: 360px;
  aspect-ratio: 9 / 16;
  background: #000;
  border-radius: 40px;
  border: 8px solid #111;
  box-shadow: 0 30px 60px rgba(0,0,0,0.15);
  position: relative;
  overflow: hidden;
}

.rh-phone-screen {
  width: 100%;
  height: 100%;
  position: relative;
  background: #000;
}

.rh-phone-screen iframe {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
  object-fit: cover;
}

/* --- MODAL (POP UP) FOR SHORTS/VERTICAL VIDEO --- */
.rh-modal-overlay {
  display: none; /* Hidden by default */
  position: fixed;
  z-index: 10000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.85);
  backdrop-filter: blur(5px);
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.rh-modal-content {
  position: relative;
  height: 80vh;
  aspect-ratio: 9/16;
  width: auto;
  max-width: 90vw;
  background: #000;
  box-shadow: 0 20px 50px rgba(0,0,0,0.6);
  border: 1px solid #333;
  border-radius: 12px;
  margin: auto;
  overflow: hidden;
}

@media (max-width: 768px) {
  .rh-modal-content {
    width: 90vw;
    height: auto;
    aspect-ratio: 9/16;
    max-height: 85vh;
  }
}

.rh-modal-content iframe {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 12px;
}

.rh-close-modal {
  position: absolute;
  top: -40px;
  right: 0;
  color: #fff;
