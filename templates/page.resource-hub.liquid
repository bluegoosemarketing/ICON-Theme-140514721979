<style>
  :root {
    --rh-black: #0a0a0a;
    --rh-white: #ffffff;
    --rh-red: #D11F1F;
    --rh-head: 'Teko', sans-serif;
    --rh-body: 'Inter', sans-serif;
  }

  .rh-page {
    background: var(--rh-white);
    color: var(--rh-black);
    font-family: var(--rh-body);
    overflow-x: hidden;
  }

  /* --- UTILITIES --- */
  .rh-breakout {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
    
  .rh-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* --- HERO SECTION --- */
  .rh-hero {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    align-items: center;
    gap: 0;
    padding: 60px 0 40px; 
    background-color: #ffffff;
  }

  .rh-hero-text {
    padding-right: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative; 
  }

  /* --- SMART SALE NOTIFICATION (FIXED LAYOUT) --- */
  #im-smart-notify {
    display: none; /* JS toggles this */
    margin-bottom: 2rem;
    display: inline-block;
    position: relative;
    padding: 12px 45px 12px 18px; 
    background: #fff5f5;
    border: 1px solid #f2dcdc;
    border-left: 4px solid var(--rh-red);
    font-family: var(--rh-body);
    font-size: 0.95rem;
    color: #333;
    line-height: 1.5;
    border-radius: 4px;
    width: fit-content;
    max-width: 100%;
    text-align: left;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    animation: fadeIn 0.8s ease;
  }
  
  #im-smart-notify:hover {
    background: #ffebeb;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(209, 31, 31, 0.1);
    border-color: #eecbc;
  }
  
  #im-smart-notify strong { color: var(--rh-black); font-weight: 800; }
  
  .im-sale-badge {
    display: inline-block;
    background: var(--rh-red);
    color: #fff;
    padding: 3px 8px;
    border-radius: 3px;
    font-weight: 700;
    font-size: 0.75rem;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    white-space: nowrap;
    margin-right: 8px;
    vertical-align: middle;
    position: relative;
    top: -1px; 
  }
  
  .im-code-text {
    font-weight: 800;
    color: var(--rh-red);
    background: rgba(209, 31, 31, 0.1);
    padding: 0 4px;
    border-radius: 3px;
    white-space: nowrap; 
  }
  
  .im-notify-arrow {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translateY(-50%);
    color: var(--rh-red);
    font-weight: bold;
    font-size: 1.2rem;
    line-height: 1;
    transition: transform 0.2s ease;
  }
  
  #im-smart-notify:hover .im-notify-arrow {
    transform: translate(4px, -50%);
  }

  @keyframes fadeIn { from { opacity: 0; transform: translateY(-5px); } to { opacity: 1; transform: translateY(0); } }

  .rh-hero-headline {
    font-family: var(--rh-head);
    font-size: clamp(4rem, 9vw, 9rem); 
    line-height: 0.85;
    text-transform: uppercase;
    margin: 0 0 2rem 0;
    color: var(--rh-black);
    font-weight: 700;
    margin-left: -3px;
  }

  .rh-text-solid { display: block; color: var(--rh-black); }
    
  .rh-text-slab { 
    display: block; 
    color: #ffffff;
    -webkit-text-stroke: 3px var(--rh-black);
    filter: drop-shadow(4px 6px 0px rgba(0,0,0,0.15));
    paint-order: stroke fill;
    transform: scale(1.02);
    transform-origin: left;
  }

  .rh-hero-desc {
    font-family: var(--rh-body);
    font-size: 1.15rem;
    line-height: 1.6;
    color: #4a4a4a;
    max-width: 520px;
    margin-bottom: 2.5rem;
  }

  /* VISUAL RIGHT SIDE */
  .rh-hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 500px;
  }

  .rh-ring {
    position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 550px; height: 550px;
    border: 1px solid rgba(209, 31, 31, 0.15);
    border-radius: 50%;
    z-index: 0;
  }
  .rh-ring::after {
    content: ''; position: absolute;
    top: 50%; left: 50%;
    transform: translate(-50%, -50%);
    width: 480px; height: 480px;
    border: 1px dashed rgba(0,0,0,0.1);
    border-radius: 50%;
  }

  .rh-hero-img {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 750px;
    height: auto;
    object-fit: contain;
    transform: rotate(-2deg); 
    filter: drop-shadow(0 30px 50px rgba(0,0,0,0.15));
  }

  .rh-badge {
    position: absolute;
    top: 0;
    right: 10%;
    width: 120px;
    height: auto;
    z-index: 3;
    filter: drop-shadow(0 4px 10px rgba(0,0,0,0.1));
  }

  /* --- CEO BANNER (UPDATED WITH PULSE) --- */
  .rh-ceo-bar {
    background-color: var(--rh-red);
    color: #ffffff;
    text-align: center;
    padding: 18px 20px;
    cursor: pointer;
    transition: background 0.3s ease;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-bottom: 0; 
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    position: relative;
    z-index: 20;
  }
  .rh-ceo-bar:hover { 
    background-color: #a81010; 
  }
  /* On hover, underline the text to show it's a link */
  .rh-ceo-bar:hover .rh-ceo-text {
    text-decoration: underline;
    text-underline-offset: 4px;
  }

  .rh-ceo-text {
    font-family: var(--rh-head);
    font-size: 1.6rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1;
    position: relative;
    top: 1px;
  }
  
  .rh-play-icon {
    width: 24px;
    height: 24px;
    fill: #fff;
    background: rgba(0,0,0,0.2);
    border-radius: 50%;
    padding: 5px;
    /* Added Pulse Animation */
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    animation: pulse-white 2s infinite;
  }

  /* Pulse Keyframes */
  @keyframes pulse-white {
    0% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
    }
    70% {
      transform: scale(1);
      box-shadow: 0 0 0 10px rgba(255, 255, 255, 0);
    }
    100% {
      transform: scale(0.95);
      box-shadow: 0 0 0 0 rgba(255, 255, 255, 0);
    }
  }

  /* --- CATEGORY GRID --- */
  .rh-categories {
    background: #ffffff;
    padding: 0 0 60px 0;
    border-bottom: 1px solid #e5e5e5;
    position: relative;
    z-index: 10;
  }

  .rh-cat-grid {
    max-width: 1600px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0;
    border-top: 1px solid #e5e5e5;
    border-bottom: 1px solid #e5e5e5;
  }

  .rh-cat-card {
    display: flex;
    flex-direction: row; 
    justify-content: space-between; 
    align-items: center; 
    text-align: left; 
    background: #fff;
    padding: 3.5rem 3rem; 
    text-decoration: none !important; 
    color: #000;
    border-right: 1px solid #e5e5e5;
    transition: all 0.2s ease;
  }
  .rh-cat-card * { text-decoration: none !important; } 
    
  .rh-cat-card:last-child { border-right: none; }

  .rh-cat-card:hover {
    background: #f8f8f8;
    z-index: 2;
  }

  .rh-cat-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .rh-cat-sub {
    font-family: var(--rh-body);
    font-size: 0.85rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--rh-red);
    margin-bottom: 8px;
    display: block;
  }

  .rh-cat-title {
    font-family: var(--rh-head);
    font-size: 3rem;
    font-weight: 600;
    line-height: 0.9;
    text-transform: uppercase;
    color: var(--rh-black);
    display: block;
  }
    
  .rh-arrow { 
    color: var(--rh-red); 
    transition: transform 0.2s; 
    font-size: 2.5rem; 
    line-height: 1;
    font-family: sans-serif;
    font-weight: 300;
  }
    
  .rh-cat-card:hover .rh-arrow { transform: translateX(8px); }

  /* --- VIDEO SECTION (Static Bottom) --- */
  .rh-video-section {
    background: #fff;
    color: var(--rh-black);
    padding: 100px 0;
    border-top: 1px solid #e5e5e5;
  }

  .rh-video-container {
    max-width: 1300px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 0.8fr;
    gap: 80px;
    align-items: center;
    padding: 0 40px;
  }

  .rh-video-title {
    font-family: var(--rh-head);
    font-size: clamp(3.5rem, 6vw, 5rem);
    line-height: 0.9;
    margin: 0 0 25px;
    color: var(--rh-black);
    text-transform: uppercase;
    font-weight: 700;
  }

  .rh-video-quote {
    font-size: 1.3rem;
    line-height: 1.5;
    font-style: italic;
    color: #333;
    margin-bottom: 30px;
    padding-left: 20px;
    border-left: 4px solid var(--rh-red);
    font-weight: 500;
  }

  .rh-video-author {
    font-size: 1.1rem;
    font-weight: 800;
    color: var(--rh-red);
    text-transform: uppercase;
    font-family: var(--rh-body);
    letter-spacing: 1px;
  }
  .rh-video-author span { display: block; font-size: 0.9rem; color: #666; font-weight: 600; text-transform: none; margin-top: 4px; letter-spacing: 0; }

  .rh-video-wrapper {
    display: flex;
    justify-content: center;
    width: 100%;
  }

  .rh-phone-outer {
    width: 100%;
    max-width: 360px;
    aspect-ratio: 9 / 16;
    background: #000;
    border-radius: 40px;
    border: 8px solid #111;
    box-shadow: 0 30px 60px rgba(0,0,0,0.15);
    position: relative;
    overflow: hidden;
  }

  .rh-phone-screen {
    width: 100%;
    height: 100%;
    position: relative;
    background: #000;
  }

  .rh-phone-screen iframe {
    position: absolute;
    top: 0; left: 0;
    width: 100%; height: 100%;
    object-fit: cover;
  }

  /* --- MODAL (POP UP) FOR SHORTS/VERTICAL VIDEO --- */
  .rh-modal-overlay {
    display: none; /* Hidden by default */
    position: fixed;
    z-index: 10000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.85);
    backdrop-filter: blur(5px);
    align-items: center;
    justify-content: center;
    padding: 20px; /* Padding for mobile so it doesn't touch edges */
  }
  
  .rh-modal-content {
    position: relative;
    
    /* FIX: Prioritize Height on Desktop so video isn't tiny */
    height: 80vh; 
    aspect-ratio: 9/16; 
    width: auto; /* Let width scale automatically based on height */
    
    /* Fallback to prevent overflow */
    max-width: 90vw;
    
    background: #000;
    box-shadow: 0 20px 50px rgba(0,0,0,0.6);
    border: 1px solid #333;
    border-radius: 12px;
    margin: auto;
    overflow: hidden; /* Ensures corners stay rounded */
  }

  /* Mobile Override: Prioritize Width on small screens */
  @media (max-width: 768px) {
    .rh-modal-content {
      width: 90vw; /* Wide on mobile */
      height: auto;
      aspect-ratio: 9/16;
      max-height: 85vh; /* Safety cap */
    }
  }
  
  .rh-modal-content iframe {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    border: none;
    border-radius: 12px;
    transform: none;
  }

  .rh-close-modal {
    position: absolute;
    top: -40px;
    right: 0;
    color: #fff;
    font-size: 30px;
    font-family: var(--rh-body);
    cursor: pointer;
    font-weight: 300;
    transition: color 0.2s;
    /* Ensure close button is visible even if modal is tall */
    background: rgba(0,0,0,0.5); 
    width: 40px; 
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }
  .rh-close-modal:hover { color: var(--rh-red); background: #fff; }

  .show-modal { display: flex !important; }

  /* --- MOBILE --- */
  @media (max-width: 1024px) {
    .rh-container { padding: 0 20px; }

    .rh-hero { grid-template-columns: 1fr; gap: 30px; padding: 40px 0 20px; text-align: center; }
    .rh-hero-text { padding-right: 0; padding-bottom: 2rem; align-items: center; }
    
    .rh-hero-headline { margin-left: 0; }
    
    .rh-text-slab { 
        transform-origin: center; 
        -webkit-text-stroke: 1.5px var(--rh-black); 
    }
    .rh-hero-desc { margin: 0 auto 30px; padding-left: 0; text-align: center; font-size: 1rem; }
    
    /* Smart Banner Mobile Tweak */
    #im-smart-notify { 
      width: 100%; 
      max-width: 400px; 
      margin: 0 auto 20px auto; 
    }

    .rh-hero-visual { min-height: auto; }
    .rh-ring { width: 320px; height: 320px; }
    .rh-ring::after { width: 280px; height: 280px; }
    .rh-hero-img { max-width: 100%; transform: rotate(0deg); }
    .rh-badge { top: -10px; right: 5%; width: 80px; }
    
    /* Banner Mobile */
    .rh-ceo-bar { padding: 15px; }
    .rh-ceo-text { font-size: 1.2rem; }

    /* Category Mobile Stack */
    .rh-cat-grid { grid-template-columns: 1fr; border-top: none; }
    .rh-cat-card { 
      border-right: none; border-bottom: 1px solid #e5e5e5; 
      padding: 2rem; 
      flex-direction: row; 
      text-align: left;
      align-items: center;
    }
    .rh-cat-title { font-size: 2rem; }

    .rh-video-container { grid-template-columns: 1fr; text-align: center; gap: 40px; }
    .rh-video-quote { border-left: none; border-top: 3px solid var(--rh-red); padding-top: 20px; padding-left: 0; margin: 0 auto 30px; }
  }
</style>

