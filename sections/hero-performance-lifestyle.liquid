{ "type": "text", "id": "cta_primary_text", "label": "Primary Button", "default": "Shop Meals" },
{ "type": "url", "id": "cta_primary_link", "label": "Primary Link" },
{ "type": "text", "id": "cta_secondary_text", "label": "Secondary Button", "default": "Build Custom Meals" },
{ "type": "url", "id": "cta_secondary_link", "label": "Secondary Link" },
{ "type": "image_picker", "id": "hero_image", "label": "Hero Image" },
