{
  "name": "Hero - Lifestyle Final",
  "settings": [
    { "type": "text", "id": "tagline", "label": "Tagline", "default": "Meal prep, solved." },
    { "type": "text", "id": "subhead", "label": "Subhead", "default": "High-protein, chef-prepared meals delivered fresh. No subscriptions. No prep." },
