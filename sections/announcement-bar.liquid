{% assign show_announcement = false %}

{% if template.name == 'index' %}
  {% assign show_announcement = true %}
{% elsif template.name == 'page' %}
  {% if page.handle != 'add-ons' %}
    {% assign show_announcement = true %}
  {% endif %}
{% elsif template.name == 'blog' or template.name == 'article' %}
  {% assign show_announcement = true %}
{% elsif request.path contains '/apps/help-center' %}
  {% assign show_announcement = true %}
{% endif %}

{% if section.settings.enable and show_announcement %}

<style>
  /* 
    ========================================
    THEME: THE HOLIDAY TICKET (ELF25)
    Desktop: Premium Spaced | Mobile: Single Row Compact
    ========================================
  */

  :root {
    --im-bg-dark: #090909;
    --im-holiday-red: #D90429;
    --im-holiday-gold: #FFC300;
    --im-snow-white: #ffffff;
  }

  /* 1. CONTAINER & RESET */
  a.im-ann-bar-root {
    background-color: var(--im-bg-dark) !important;
    border-bottom: 2px solid var(--im-holiday-red) !important; 
    color: var(--im-snow-white) !important;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif !important;
    min-height: 46px !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    text-decoration: none !important;
    overflow: hidden !important;
    width: 100% !important;
    position: relative !important;
    z-index: 50 !important;
    cursor: pointer !important;
  }

  /* 2. NUCLEAR TEXT RESET */
  .im-ann-bar-root *, .im-ann-bar-root span {
    text-decoration: none !important;
    line-height: 1 !important;
    box-sizing: border-box !important;
  }

  /* 3. LAYOUT */
  .im-ann-content {
    display: flex !important;
    align-items: center !important;
    gap: 20px !important;
    padding: 0 15px !important;
  }

  .im-group-left, .im-group-right {
    display: flex !important;
    align-items: center !important;
  }
  .im-group-left { gap: 12px !important; }
  .im-group-right { gap: 10px !important; }

  /* 4. THE CANDY CANE BADGE */
  .im-badge-candy {
    background: repeating-linear-gradient(
      45deg,
      var(--im-holiday-red),
      var(--im-holiday-red) 10px,
      #ef233c 10px,
      #ef233c 20px
    ) !important;
    color: #fff !important;
    font-weight: 800 !important;
    font-size: 13px !important;
    padding: 5px 12px !important;
    border-radius: 50px !important; 
    box-shadow: 0 2px 10px rgba(217, 4, 41, 0.4) !important;
    text-shadow: 0 1px 2px rgba(0,0,0,0.3) !important;
    letter-spacing: 0.5px !important;
    position: relative !important;
    overflow: hidden !important;
    white-space: nowrap !important;
  }

  /* Shimmer over the candy cane */
  .im-badge-candy::after {
    content: '' !important;
    position: absolute !important;
    top: 0; left: -100%;
    width: 50%; height: 100%;
    background: linear-gradient(to right, transparent, rgba(255,255,255,0.4), transparent) !important;
    transform: skewX(-25deg) !important;
    animation: imCandyShine 3s infinite;
  }

  @keyframes imCandyShine {
    0% { left: -100%; }
    20% { left: 200%; }
    100% { left: 200%; }
  }

  /* 5. TEXT STYLES */
  .im-ann-text {
    font-weight: 700 !important;
    font-size: 14px !important;
    text-transform: uppercase !important;
    letter-spacing: 1px !important;
    color: #f5f5f5 !important;
    white-space: nowrap !important;
  }

  .im-ann-label {
    font-size: 11px !important;
    color: #aaa !important;
    text-transform: uppercase !important;
    font-weight: 600 !important;
  }

  /* 6. THE "GOLDEN TICKET" CODE */
  .im-code-ticket {
    background: rgba(255, 195, 0, 0.15) !important;
    border: 1px dashed var(--im-holiday-gold) !important;
    color: var(--im-holiday-gold) !important;
    font-family: "Courier New", Courier, monospace !important;
    font-weight: 700 !important;
    font-size: 15px !important;
    padding: 4px 10px !important;
    border-radius: 4px !important;
    letter-spacing: 1px !important;
    position: relative !important;
    transition: all 0.2s ease !important;
  }
  
  .im-code-ticket::before, .im-code-ticket::after {
    content: '' !important;
    position: absolute !important;
    height: 8px !important;
    width: 8px !important;
    background-color: var(--im-bg-dark) !important;
    border-radius: 50% !important;
    top: 50% !important;
    transform: translateY(-50%) !important;
    box-shadow: 0 0 0 1px var(--im-holiday-gold) inset !important; 
    z-index: 2 !important;
  }
  .im-code-ticket::before { left: -5px !important; border-right: 1px solid var(--im-holiday-gold) !important; }
  .im-code-ticket::after { right: -5px !important; border-left: 1px solid var(--im-holiday-gold) !important; }

  a.im-ann-bar-root:hover .im-code-ticket {
    background: var(--im-holiday-gold) !important;
    color: #000 !important;
    box-shadow: 0 0 15px rgba(255, 195, 0, 0.5) !important;
  }

  /* 7. GIFT ICON */
  .im-icon-gift {
    width: 18px !important;
    height: 18px !important;
    margin-left: 4px !important;
    color: var(--im-holiday-red) !important;
    transition: transform 0.3s ease !important;
  }

  @keyframes wiggle {
    0% { transform: rotate(0deg); }
    25% { transform: rotate(-10deg); }
    50% { transform: rotate(10deg); }
    75% { transform: rotate(-5deg); }
    100% { transform: rotate(0deg); }
  }

  a.im-ann-bar-root:hover .im-icon-gift {
    animation: wiggle 0.5s ease-in-out !important;
    color: var(--im-holiday-gold) !important;
  }

  /* 
     ========================================
     8. MOBILE OPTIMIZATION (SINGLE ROW) 
     ========================================
  */
  @media (max-width: 767px) {
    a.im-ann-bar-root {
      min-height: 42px !important; /* Slimmer height */
      height: 42px !important;
      padding: 0 5px !important;
    }
    
    .im-ann-content {
      flex-direction: row !important; /* Force Single Row */
      justify-content: center !important;
      gap: 8px !important; /* Tighter gap */
      width: 100% !important;
    }

    /* Allow groups to shrink to content width */
    .im-group-left, .im-group-right {
      width: auto !important;
      justify-content: center !important;
    }
    .im-group-left { gap: 6px !important; }
    .im-group-right { gap: 6px !important; }

    /* Hide "Use Code" label to save space */
    .im-ann-label { display: none !important; }
    
    /* Compact Elements */
    .im-badge-candy { 
      font-size: 10px !important; 
      padding: 4px 8px !important; 
    }
    
    .im-ann-text { 
      font-size: 11px !important; 
      letter-spacing: 0.5px !important;
    }
    
    .im-code-ticket { 
      font-size: 12px !important; 
      padding: 3px 8px !important; 
    }
    
    /* Shrink ticket cutouts slightly for mobile */
    .im-code-ticket::before, .im-code-ticket::after {
      height: 6px !important;
      width: 6px !important;
      box-shadow: 0 0 0 1px var(--im-holiday-gold) inset !important; 
    }
    .im-code-ticket::before { left: -4px !important; }
    .im-code-ticket::after { right: -4px !important; }

    .im-icon-gift {
      width: 14px !important;
      height: 14px !important;
      margin-left: 2px !important;
    }
  }
</style>

