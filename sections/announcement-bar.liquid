{%- comment -%}
  ICON Meals Premium Compact Announcement Bar v2.0
  - Mobile: Auto-scrolling ticker (prevents wrapping/bulkiness)
  - Desktop: Centered high-contrast layout
{%- endcomment -%}

{% assign show_announcement = false %}
{% if template.name == 'index' or template.name == 'page' or template.name == 'blog' or template.name == 'article' %}
  {% unless page.handle == 'add-ons' %}
    {% assign show_announcement = true %}
  {% endunless %}
{% endif %}

{% if section.settings.enable and show_announcement %}
<style>
  #im-ann-bar-v2 {
    --bg-color: #000000;
    --text-color: #ffffff;
    --accent-color: #D11F1F;
    --bar-height: 40px;
    
    background: var(--bg-color);
    min-height: var(--bar-height);
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    text-decoration: none;
    z-index: 999;
  }

  .im-ann-wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 15px;
  }

  /* DESKTOP LAYOUT */
  .im-ann-inner {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .im-ann-text {
    color: var(--text-color);
    font-family: "Inter", sans-serif;
    font-size: 13px;
    font-weight: 700;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin: 0;
  }

  .im-ann-btn {
    background: #fff;
    color: #000;
    padding: 4px 14px;
    border-radius: 50px;
    font-size: 11px;
    font-weight: 900;
    display: flex;
    align-items: center;
    gap: 5px;
    transition: 0.3s;
  }

  /* MOBILE FIX: THE TICKER */
  @media (max-width: 768px) {
    #im-ann-bar-v2 {
      --bar-height: 36px; /* Even slimmer on mobile */
    }
    
    .im-ann-wrapper {
      padding: 0;
      overflow: hidden;
    }

    /* This creates a seamless loop so text never wraps */
    .im-ann-inner {
      display: flex;
      white-space: nowrap;
      gap: 50px; /* Space between the repeating messages */
      animation: imTicker 20s linear infinite;
      padding-left: 100%;
    }

    .im-ann-text {
      font-size: 11px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .im-ann-btn {
      padding: 3px 10px;
      font-size: 10px;
    }

    .mobile-hide { display: none; }
  }

  @keyframes imTicker {
    0% { transform: translate3d(0, 0, 0); }
    100% { transform: translate3d(-100%, 0, 0); }
  }

  #im-ann-bar-v2:hover .im-ann-inner {
    animation-play-state: paused;
  }
</style>

<a href="{{ section.settings.link | default: '/collections/signature-meals' }}" id="im-ann-bar-v2">
  <div class="im-ann-wrapper">
    <!-- Inner is doubled for the seamless scroll effect on mobile -->
    <div class="im-ann-inner">
      
      <!-- Message Set 1 -->
      <div class="im-ann-text">
        {{ section.settings.text | default: "World Class Nutrition Delivered To Your Door" }}
        <div class="im-ann-btn">SHOP NOW <span>&rarr;</span></div>
      </div>

      <!-- Message Set 2 (Visible only during mobile scroll) -->
      <div class="im-ann-text mobile-only-ticker-item" style="display: none;">
        {{ section.settings.text | default: "World Class Nutrition Delivered To Your Door" }}
        <div class="im-ann-btn">SHOP NOW <span>&rarr;</span></div>
      </div>

    </div>
  </div>
</a>

<script>
  // Simple check to duplicate text for the ticker only on mobile
  if (window.innerWidth < 769) {
    document.querySelector('.mobile-only-ticker-item').style.display = 'flex';
  }
</script>
{% endif %}

{% schema %}
{
  "name": "Announcement Bar v2",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "default": true,
      "label": "Show announcement"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Message",
      "default": "World Class Nutrition Delivered To Your Door"
    }
  ]
}
{% endschema %}