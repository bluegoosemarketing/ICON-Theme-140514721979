{{ 'section-announcement-bar.min.css' | asset_url | stylesheet_tag }}

{% comment %}
  ========================================
  VISIBILITY LOGIC
  ========================================
{% endcomment %}

{% assign show_announcement = false %}

{% if template.name == 'index' %}
  {% assign show_announcement = true %}
{% elsif template.name == 'page' %}
  {% if page.handle != 'add-ons' %}
    {% assign show_announcement = true %}
  {% endif %}
{% elsif template.name == 'blog' or template.name == 'article' %}
  {% assign show_announcement = true %}
{% elsif request.path contains '/apps/help-center' %}
  {% assign show_announcement = true %}
{% endif %}

{% if section.settings.enable and show_announcement %}

<style>
  /* 
    ========================================
    ICON MEALS: BULLETPROOF STYLING (V3 - COMPACT MOBILE)
    ========================================
  */

  /* 1. RESET & CONTAINER */
  a.im-ann-bar-root {
    background-color: #080808 !important;
    border-bottom: 1px solid #2a2a2a !important;
    color: #ffffff !important;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif !important;
    height: 46px !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    text-decoration: none !important;
    overflow: hidden !important;
    width: 100% !important;
    position: relative !important;
    z-index: 50 !important;
    cursor: pointer !important;
  }

  /* Hover Effect */
  a.im-ann-bar-root:hover {
    background-color: #111111 !important;
  }

  /* 2. NUCLEAR TEXT RESET */
  .im-ann-bar-root *, .im-ann-bar-root span, .im-ann-bar-root div {
    text-decoration: none !important;
    border-bottom: none !important;
    box-shadow: none !important;
    line-height: 1 !important;
  }

  /* 3. CONTENT LAYOUT (FLEX GROUPS) */
  .im-ann-content {
    display: flex !important;
    align-items: center !important;
    gap: 15px !important;
    padding: 0 15px !important;
    max-width: 100% !important;
  }

  /* Group 1: Badge + Text */
  .im-group-primary {
    display: flex !important;
    align-items: center !important;
    gap: 10px !important;
  }

  /* Group 2: Code + Arrow */
  .im-group-secondary {
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
  }

  /* 4. ELEMENT STYLES */
  .im-ann-badge {
    background-color: #e50914 !important;
    color: #ffffff !important;
    font-weight: 800 !important;
    font-size: 13px !important;
    padding: 4px 10px !important;
    border-radius: 4px !important;
    text-transform: uppercase !important;
    transform: skew(-10deg) !important;
    display: inline-block !important;
  }
  
  .im-ann-badge span {
    display: block !important;
    transform: skew(10deg) !important; 
  }

  .im-ann-text {
    font-weight: 700 !important;
    font-size: 13px !important;
    letter-spacing: 1.5px !important;
    text-transform: uppercase !important;
    color: #f5f5f5 !important;
  }

  .im-ann-divider {
    height: 16px !important;
    width: 1px !important;
    background-color: #444444 !important;
    display: block !important;
  }

  .im-ann-label {
    color: #999999 !important;
    font-size: 11px !important;
    font-weight: 500 !important;
    text-transform: uppercase !important;
  }

  .im-ann-code {
    font-family: "Courier New", Courier, monospace !important;
    color: #ffffff !important;
    font-size: 15px !important;
    font-weight: 700 !important;
    letter-spacing: 1px !important;
    background: rgba(255,255,255,0.1) !important;
    padding: 3px 8px !important;
    border: 1px dashed #666 !important;
    border-radius: 4px !important;
  }

  .im-ann-arrow {
    margin-left: 2px !important;
    transition: transform 0.2s ease-out !important;
    display: block !important;
  }
  
  a.im-ann-bar-root:hover .im-ann-arrow {
    transform: translateX(4px) !important;
  }

  /* 5. MOBILE OPTIMIZATION (COMPACT 2-ROW) */
  @media (max-width: 767px) {
    a.im-ann-bar-root {
      height: auto !important;
      padding: 6px 0 !important; /* Tight padding */
    }
    
    .im-ann-content {
      flex-direction: column !important;
      justify-content: center !important;
      gap: 3px !important; /* Tight gap between rows */
    }

    /* Force groups to center */
    .im-group-primary, .im-group-secondary {
      justify-content: center !important;
      width: 100% !important;
    }

    /* Hide divider on mobile */
    .im-ann-divider { display: none !important; }
    
    /* Smaller Fonts for Mobile */
    .im-ann-badge { font-size: 10px !important; padding: 3px 6px !important; }
    .im-ann-text { font-size: 11px !important; letter-spacing: 1px !important; }
    .im-ann-label { font-size: 10px !important; }
    .im-ann-code { font-size: 13px !important; padding: 1px 6px !important; }
  }
</style>

<!-- 
  LINK WRAPPER:
  Includes auto-apply logic for code NODIET
-->
<a href="/discount/NODIET?redirect=/collections/signature-menu" class="im-ann-bar-root">
  
  <div class="im-ann-content">
    
    <!-- Group 1: Badge & Main Text -->
    <div class="im-group-primary">
      <div class="im-ann-badge">
        <span>25% OFF</span>
      </div>
      <span class="im-ann-text">Sitewide Sale</span>
    </div>

    <!-- Desktop Divider -->
    <span class="im-ann-divider"></span>

    <!-- Group 2: Code & Arrow -->
    <div class="im-group-secondary">
      <span class="im-ann-label">Use Code:</span>
      <span class="im-ann-code">NODIET</span>
      
