{{ 'section-announcement-bar.min.css' | asset_url | stylesheet_tag }}

{% comment %}
  ========================================
  VISIBILITY LOGIC
  ========================================
{% endcomment %}

{% assign show_announcement = false %}

{% if template.name == 'index' %}
  {% assign show_announcement = true %}
{% elsif template.name == 'page' %}
  {% if page.handle != 'add-ons' %}
    {% assign show_announcement = true %}
  {% endif %}
{% elsif template.name == 'blog' or template.name == 'article' %}
  {% assign show_announcement = true %}
{% elsif request.path contains '/apps/help-center' %}
  {% assign show_announcement = true %}
{% endif %}

{% if section.settings.enable and show_announcement %}

<style>
  /* ========================================
    THEME: NEW YEAR FLASH (High Contrast)
    Aesthetic: Clean, Bold, Urgent
    ========================================
  */

  :root {
    --im-bar-bg: #111111;       /* Deep Black */
    --im-bar-text: #ffffff;     /* Pure White */
    --im-highlight: #D11F1F;    /* Icon Red */
    --im-accent-yellow: #FFC107; /* Pop of Yellow for contrast */
  }

  /* 1. CONTAINER & RESET */
  a.im-ann-bar-root {
    position: relative !important;
    width: 100% !important;
    min-height: 44px !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    text-decoration: none !important;
    z-index: 50 !important;
    cursor: pointer !important;
    overflow: hidden !important;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif !important;
    background-color: var(--im-bar-bg) !important;
    color: var(--im-bar-text) !important;
    border-bottom: 1px solid rgba(255,255,255,0.1) !important;
  }

  /* 2. LAYOUT CONTENT */
  .im-ann-content {
    position: relative !important;
    z-index: 5 !important;
    display: flex !important;
    align-items: center !important;
    gap: 15px !important;
    padding: 0 15px !important;
    width: 100%;
    justify-content: center;
  }

  /* 3. TEXT GROUPS */
  .im-text-group {
    display: flex !important;
    align-items: center !important;
    gap: 8px !important;
    white-space: nowrap !important;
  }

  /* 4. KEY ELEMENTS */
  .im-badge-flash {
    background-color: var(--im-highlight) !important;
    color: #fff !important;
    font-weight: 900 !important;
    font-size: 11px !important;
    padding: 3px 8px !important;
    border-radius: 3px !important;
    text-transform: uppercase !important;
    letter-spacing: 0.5px !important;
    animation: pulseRed 2s infinite;
  }

  .im-offer-text {
    font-weight: 800 !important;
    font-size: 13px !important;
    text-transform: uppercase !important;
    letter-spacing: 1px !important;
  }
  
  .im-highlight-yellow {
    color: var(--im-accent-yellow) !important;
  }

  .im-divider {
    opacity: 0.3 !important;
    font-weight: 300 !important;
    margin: 0 5px !important;
  }

  .im-code-box {
    border: 1px dashed rgba(255,255,255,0.5) !important;
    padding: 2px 6px !important;
    border-radius: 3px !important;
    font-family: monospace !important;
    font-weight: 700 !important;
    font-size: 12px !important;
    letter-spacing: 1px !important;
    color: #fff !important;
  }

  .im-arrow-icon {
    width: 14px !important;
    height: 14px !important;
    margin-left: 5px !important;
    transition: transform 0.2s ease;
  }

  a.im-ann-bar-root:hover .im-arrow-icon {
    transform: translateX(3px);
  }

  /* 5. ANIMATIONS */
  @keyframes pulseRed {
    0% { box-shadow: 0 0 0 0 rgba(209, 31, 31, 0.4); }
    70% { box-shadow: 0 0 0 6px rgba(209, 31, 31, 0); }
    100% { box-shadow: 0 0 0 0 rgba(209, 31, 31, 0); }
  }

  /* ========================================
     6. MOBILE OPTIMIZATION
     ========================================
  */
  @media (max-width: 767px) {
    a.im-ann-bar-root {
      min-height: 40px !important;
      padding: 0 5px !important;
    }

    .im-ann-content {
      justify-content: center !important;
      gap: 5px !important;
    }
    
    .im-offer-text {
      font-size: 11px !important;
    }

    /* Hide the divider/extra text on very small screens if needed, 
       but we are trying to keep it on one line. */
    .desktop-only {
      display: none !important;
    }
    
    .im-badge-flash {
      font-size: 10px !important;
      padding: 2px 5px !important;
    }
  }
</style>

<a href="/discount/NYE31?redirect=/pages/nye31" class="im-ann-bar-root">
  
  <div class="im-ann-content">
    
    <div class="im-text-group">
      <div class="im-badge-flash">ENDS TODAY</div>
      <span class="im-offer-text">
        31% OFF <span class="desktop-only">SITEWIDE</span>
      </span>
    </div>

    <span class="im-divider">|</span>

    <div class="im-text-group">
      <span class="im-offer-text">
        USE CODE: <span class="im-code-box">NYE31</span>
      </span>
      
      <svg class="im-arrow-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </div>

  </div>

</a>

