  </main>
</article>

<style>
  .bulk-builds {
    --color-text: #2d3748;
    --color-text-light: #4a5568;
    --color-heading: #1a202c;
    --color-background: #ffffff;
    --color-background-alt: #f7fafc;
    --color-border: #e2e8f0;
    --color-primary: #CD1C26;
    --color-accent: #E4922A;
    --font-heading: {{ settings.heading_font.family }}, {{ settings.heading_font.fallback_families }};
    --font-body: {{ settings.body_font.family }}, {{ settings.body_font.fallback_families }};
    --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -2px rgba(0,0,0,0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1);
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;
  }

  .bulk-builds { background-color: var(--color-background); color: var(--color-text); font-family: var(--font-body); line-height: 1.65; }
  .bulk-builds h1, .bulk-builds h2, .bulk-builds h3, .bulk-builds h4 { font-family: var(--font-heading); font-weight: 700; color: var(--color-heading); line-height: 1.2; margin-top: 0; }
  .bulk-builds a { color: var(--color-primary); text-decoration: underline; text-decoration-thickness: 1px; text-underline-offset: 3px; transition: color 0.2s ease; }
  .bulk-builds a:hover { color: var(--color-accent); }

  .bulk-builds__container { max-width: 1100px; width: 100%; margin: 0 auto; padding: 0 1.5rem; }
  .bulk-builds__container--narrow { max-width: 800px; width: 100%; margin: 0 auto; padding: 0 1.5rem; }

  .bulk-builds__header { text-align: center; padding: clamp(3rem, 8vw, 5rem) 0; border-bottom: 1px solid var(--color-border); background-color: var(--color-background-alt); }
  .bulk-builds__header h1 { font-size: clamp(2rem, 5vw, 3rem); margin-bottom: 1rem; }
  .bulk-builds__intro { font-size: 1.2rem; color: var(--color-text-light); max-width: 60ch; margin: 0 auto; }

  .bulk-builds__section { padding: clamp(3rem, 8vw, 5rem) 0; }
  .bulk-builds__section--highlight { background-color: var(--color-background-alt); border-top: 1px solid var(--color-border); border-bottom: 1px solid var(--color-border); }
  .bulk-builds__section h2 { text-align: center; font-size: clamp(1.75rem, 4vw, 2.5rem); margin-bottom: 3rem; }
  .bulk-builds__section h2::after { content: ''; display: block; width: 60px; height: 4px; margin: 0.75rem auto 0; border-radius: 2px; background: linear-gradient(to right, var(--color-primary), var(--color-accent)); }

  .recipe-layout { display: grid; gap: clamp(2.5rem, 6vw, 4rem); }
  
  .recipe-card { background-color: var(--color-background); border: 1px solid var(--color-border); border-radius: var(--radius-lg); box-shadow: var(--shadow-md); display: flex; flex-direction: column; overflow: hidden; }
  .recipe-card__image-wrapper img { display: block; width: 100%; height: 300px; object-fit: cover; }
  .recipe-card__content { padding: 1.5rem; display: flex; flex-direction: column; flex-grow: 1; text-align: left; }
  .recipe-card h2 { font-size: 1.5rem; margin-bottom: 0.25rem; text-align: left; }
  .recipe-card h2::after { display: none; }
  .recipe-card__subtitle { color: var(--color-text-light); margin-top: 0; margin-bottom: 1.5rem; font-style: italic; }
  
  .recipe-card__action-title { display: inline-block; font-size: 1rem; text-transform: uppercase; letter-spacing: 0.05em; background-color: var(--color-background-alt); color: var(--color-heading); padding: 0.35rem 0.85rem; border-radius: var(--radius-md); margin: 0 0 1rem; border: 1px solid var(--color-border); }
  
  .recipe-card__details { background-color: var(--color-background-alt); padding: 1rem; border-radius: var(--radius-md); margin-bottom: 1.5rem; }
  .recipe-card__details p { margin: 0 0 1rem; }
  .recipe-card__details .ingredient-list { list-style: none; margin: 0; padding: 0; }
  .recipe-card__details .ingredient-list li { margin-bottom: 0.25rem; }
  .recipe-card__details h3 { font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.05em; color: var(--color-heading); border: none; padding: 0; margin-bottom: 0.5rem; }
  
  .recipe-card__steps { padding-left: 1.25rem; margin-bottom: 1.5rem; }
  .recipe-card__steps li { margin-bottom: 0.75rem; }
  .recipe-card__steps li::marker { font-family: var(--font-heading); font-weight: 700; color: var(--color-primary); }
  .recipe-card__tip { background-color: #fffbeb; color: #92400e; border-left: 4px solid #fBBF24; padding: 1rem; border-radius: var(--radius-md); margin-top: auto; font-size: 0.9rem; }
  .recipe-card__tip p { margin: 0; }

  @media(min-width: 900px) {
    .recipe-card { display: grid; grid-template-columns: 35% 1fr; align-items: start; padding: 2.5rem; gap: 2.5rem; overflow: visible; }
    .recipe-card:nth-child(even) { grid-template-columns: 1fr 35%; }
    .recipe-card:nth-child(even) .recipe-card__image-wrapper { grid-column: 2 / 3; grid-row: 1 / 2; }
    .recipe-card__image-wrapper img { height: auto; width: 100%; border-radius: var(--radius-md); }
    .recipe-card__content { padding: 0; }
  }

  .reasons-list { list-style-type: '✓'; padding-left: 1.5rem; }
  .reasons-list li { padding-left: 0.75rem; margin-bottom: 1rem; font-size: 1.1rem; }
  .reasons-list li::marker { color: var(--color-primary); font-weight: 700; }
  
  .shop-the-build__grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem; }
  @media(min-width: 768px) { .shop-the-build__grid { grid-template-columns: repeat(4, 1fr); gap: 1.5rem; } }
  .shop-the-build__card { background-color: var(--color-background); border: 1px solid var(--color-border); border-radius: var(--radius-md); padding: 1rem; text-align: center; display: flex; flex-direction: column; transition: transform 0.2s ease, box-shadow 0.2s ease; }
  .shop-the-build__card:hover { transform: translateY(-5px); box-shadow: var(--shadow-lg); }
  .shop-the-build__card-image { width: 100%; height: auto; aspect-ratio: 1/1; object-fit: cover; border-radius: var(--radius-md); margin-bottom: 1rem; }
  .shop-the-build__card-title { font-size: 1rem; margin-bottom: 1rem; flex-grow: 1; }
  .shop-the-build__card-button { display: block; background-color: var(--color-primary); color: white !important; -webkit-text-fill-color: white; opacity: 1; padding: 0.75rem 1rem; text-decoration: none; border-radius: var(--radius-md); font-weight: 600; transition: background-color 0.2s ease; }
  .shop-the-build__card-button:hover { background-color: var(--color-heading); color: white !important; -webkit-text-fill-color: white; text-decoration: none; }

  .bulk-builds__cta { text-align: center; padding-top: 0; }
  .bulk-builds__cta p { color: var(--color-text-light); margin: 1.5rem 0 2.5rem; }
  .bulk-builds__cta-button { display: inline-block; background: linear-gradient(to right, var(--color-primary), var(--color-accent)); color: white; font-family: var(--font-heading); font-weight: 700; font-size: 1.1rem; padding: 1rem 2.5rem; border-radius: 9999px; text-decoration: none; transition: transform 0.2s ease-out, box-shadow 0.2s ease-out; box-shadow: var(--shadow-md); -webkit-background-clip: border-box; background-clip: border-box; -webkit-text-fill-color: white; }
  .bulk-builds__cta-button:hover { transform: translateY(-3px); box-shadow: var(--shadow-lg); color: white; }
</style>

