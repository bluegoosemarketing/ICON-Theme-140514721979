<!-- Black Friday Hero Section V3 -->
<section class="bf-hero-section">
  <div class="bf-hero-background">
    <picture>
      <source
        media="(min-width: 768px)"
        srcset="https://cdn.shopify.com/s/files/1/1957/2713/files/Web-Hero_Deksktop_v1.jpg?v=1731341384"
        width="1920"
        height="800"
      >
      <img
        src="https://cdn.shopify.com/s/files/1/1957/2713/files/Web-Hero_Mobile_v1.jpg?v=1731342000"
        alt="Healthy Meals, Ready to Eat"
        class="bf-hero-image"
        width="750"
        height="1334"
      >
    </picture>
  </div>
  <div class="bf-hero-content">
    <h1 class="bf-hero-heading">
      Healthy Meals, Ready to Eat
    </h1>
    <h2 class="bf-hero-subheading">
      Fresh from Our Kitchen to <span class="bf-hero-subheading-break">Your Front Door</span>
    </h2>
    <button id="bf-open-modal-btn" class="bf-hero-button">
      Get Early Access <span class="bf-button-arrow">â†’</span>
    </button>
  </div>
</section>

<!-- Modal for Early Access Form -->
<div id="bf-early-access-modal" class="bf-modal">
  <div class="bf-modal-content">
    <span class="bf-close">&times;</span>
    
    <!-- Form -->
    <div id="form-content">
      <h2>Get Early Bird Access</h2>
      <form id="bf-early-access-form">
        <div class="bf-form-group">
          <label for="bf-name">Name</label>
          <input type="text" id="bf-name" name="name" placeholder="Your Name" required>
        </div>
        <div class="bf-form-group">
          <label for="bf-email">Email</label>
          <input type="email" id="bf-email" name="email" placeholder="Your Email" required>
        </div>
        <div class="bf-form-group">
          <label for="bf-phone">Phone Number</label>
          <input type="tel" id="bf-phone" name="phone" placeholder="Your Phone Number" required>
        </div>
        <div class="bf-form-group bf-consent-group">
          <input type="checkbox" id="bf-consent" name="consent" required>
          <label for="bf-consent" class="bf-consent-label">
            I agree to receive marketing text messages from ICON Meals at the number provided. Consent is not a condition of any purchase. Message and data rates may apply. Message frequency varies. Reply STOP to cancel. View our <a href="/policies/privacy-policy" target="_blank">Privacy Policy</a> and <a href="/policies/terms-of-service" target="_blank">Terms of Service</a>.
          </label>
        </div>
        <button type="submit" class="bf-submit-button">Subscribe</button>
      </form>
    </div>

    <!-- Thank You Message -->
    <div id="thank-you-message" style="display: none;">
      <h2>Thank You!</h2>
      <p>Your subscription was successful. Stay tuned for exclusive updates!</p>
    </div>
  </div>
</div>


<style>
/* Black Friday Hero Section Styles */
.bf-hero-section {
  position: relative;
  width: 100%;
  overflow: hidden;
  height: 70vh;
  max-height: 800px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bf-hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.bf-hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.bf-hero-content {
  position: relative;
  text-align: center;
  color: #333333;
  padding: 0 10px;
  width: 90%;
  max-width: 800px;
}

.bf-hero-heading {
  font-size: 2.5rem;
  font-weight: 800;
  margin-bottom: 15px;
  color: #333333 !important;
  text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.7);
  line-height: 1.2;
  text-transform: none;
}

.bf-hero-subheading {
  font-size: 1.5rem;
  font-weight: 400;
  margin-bottom: 35px;
  color: #555555;
  text-shadow: 1px 1px 2px rgba(255, 255, 255, 0.7);
  line-height: 1.3;
  text-transform: none;
}

.bf-hero-subheading-break {
  display: inline;
}

@media (max-width: 767px) {
  .bf-hero-subheading-break {
    display: block;
  }
}

.bf-hero-button {
  display: inline-flex !important;
  align-items: center !important;
  padding: 14px 32px !important;
  background-color: #e63946 !important;
  color: #ffffff !important;
  text-decoration: none !important;
  font-size: 1rem !important;
  font-weight: 600 !important;
  border-radius: 6px !important;
  transition: background-color 0.3s ease, transform 0.3s ease !important;
  border: none !important;
  cursor: pointer !important;
  opacity: 1 !important;
}

.bf-hero-button .bf-button-arrow {
  display: inline-block !important;
  margin-left: 8px !important;
  transition: transform 0.3s ease !important;
}

.bf-hero-button:hover {
  background-color: #ed3240 !important;
  transform: translateY(-2px) !important;
}

.bf-hero-button:hover .bf-button-arrow {
  transform: translateX(5px) !important;
}

/* Modal Styles */
.bf-modal {
  display: none;
  position: fixed;
  z-index: 1000;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgba(0, 0, 0, 0.6);
}

.bf-modal-content {
  background-color: #fefefe;
  margin: 10% auto;
  padding: 30px;
  border-radius: 10px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  width: 90%;
  max-width: 500px;
  position: relative;
}

.bf-close {
  color: #aaa;
  position: absolute;
  top: 15px;
  right: 20px;
  font-size: 28px;
  font-weight: bold;
  cursor: pointer;
}

.bf-close:hover,
.bf-close:focus {
  color: #000;
  text-decoration: none;
  cursor: pointer;
}

.bf-modal-content h2 {
  margin-bottom: 20px;
  color: #333333;
}

/* Form Group Styles */
.bf-form-group {
  margin-bottom: 20px;
}

.bf-form-group label {
  display: block;
  font-weight: 600;
  margin-bottom: 5px;
  color: #333333;
}

.bf-form-group input {
  width: 100%;
  padding: 10px;
  border: 1px solid #cccccc;
  border-radius: 5px;
  font-size: 1rem;
}

/* Scoped to the consent group inside the modal */
#bf-early-access-form .bf-consent-group {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20px;
  width: 100%; /* Ensure it uses the full width of the form */
}

#bf-early-access-form .bf-consent-group input[type="checkbox"] {
  margin: 0;
  flex-shrink: 0;
  width: 16px;
  height: 16px;
}

#bf-early-access-form .bf-consent-label {
  font-size: 0.675rem;
  color: var(--text-color, #333333); /* Uses Shopify's theme variable if available */
  line-height: 1.4;
  margin-left: 8px;
  flex-grow: 1;
  text-align: left;
  word-wrap: break-word;
}

#bf-early-access-form .bf-consent-label a {
  color: var(--primary-color, #e63946);
  text-decoration: underline;
}

#bf-early-access-form .bf-consent-label a:hover {
  text-decoration: none;
}

@media (max-width: 767px) {
  #bf-early-access-form .bf-consent-label {
    font-size: 0.6rem;
    line-height: 1.3;
  }
}

/* Submit Button */
.bf-submit-button {
  width: 100%;
  padding: 12px;
  background-color: #e63946;
  color: #ffffff;
  border: none;
  border-radius: 5px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.bf-submit-button:hover {
  background-color: #d62839;
}

/* Desktop Styling */
@media (min-width: 768px) {
  .bf-hero-section {
    height: 60vh;
    max-height: 700px;
  }

  .bf-hero-image {
    height: 100%;
    object-fit: cover;
  }

  .bf-hero-heading {
    font-size: 3rem;
    margin-bottom: 15px;
  }

  .bf-hero-subheading {
    font-size: 1.75rem;
    margin-bottom: 45px;
  }

  .bf-hero-button {
    font-size: 1.1rem !important;
    padding: 16px 36px !important;
  }

  .bf-hero-content {
    padding: 0 20px;
    width: 80%;
    max-width: 900px;
  }

  .bf-hero-subheading-break {
    display: inline;
  }
}

@media (min-width: 1200px) {
  .bf-hero-section {
    height: 50vh;
    max-height: 600px;
  }

  .bf-hero-heading {
    font-size: 3.5rem;
    margin-bottom: 15px;
  }

  .bf-hero-subheading {
    font-size: 2rem;
    margin-bottom: 45px;
  }

  .bf-hero-button {
    font-size: 1.2rem !important;
    padding: 18px 40px !important;
  }

  .bf-hero-content {
    padding: 0 30px;
    width: 70%;
  }
}

/* Mobile Styling */
@media (max-width: 767px) {
  .bf-hero-section {
    height: auto;
    min-height: 35vh;
    padding-top: 20px;
  }

  .bf-hero-image {
    height: auto;
    object-fit: contain;
  }

  .bf-hero-heading {
    font-size: 2rem;
    margin-bottom: 10px;
  }

  .bf-hero-subheading {
    font-size: 1.1rem;
    margin-bottom: 30px;
  }

  .bf-hero-subheading-break {
    display: block;
  }

  .bf-hero-button {
    font-size: 0.9rem !important;
    padding: 12px 28px !important;
  }

  .bf-hero-content {
    padding: 0 10px;
    width: 100%;
  }
}
</style>


