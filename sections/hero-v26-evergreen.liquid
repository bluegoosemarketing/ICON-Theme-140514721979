<script>
document.addEventListener('DOMContentLoaded', () => {
  const heroSection   = document.querySelector('.hero22-section');
  const mealHotspot   = document.querySelector('.hero22-meal-hotspot');
  const mealModal     = document.getElementById('meal-modal');
  const modalOverlay  = document.getElementById('meal-modal-overlay');
  const closeButton   = document.querySelector('.hero22-modal-close');
  const rippleOverlay = document.querySelector('.hero22-ripple-overlay');

  if (!heroSection || !mealHotspot || !mealModal || !modalOverlay || !closeButton || !rippleOverlay) {
    // console.warn('[Hero] Interactive elements missing - normal if hotspot disabled');
    return;
  }

  let rippleTimeout;
  const isCoarse = window.matchMedia('(pointer: coarse)').matches;

  const focusSelectors = [
    'a[href]', 'button:not([disabled])', '[role="button"]',
    'input:not([disabled])', 'select:not([disabled])', 'textarea:not([disabled])',
    '[tabindex]:not([tabindex="-1"])'
  ].join(',');

  const getFocusables = (root) => Array.from(root.querySelectorAll(focusSelectors))
    .filter(el => el.offsetParent !== null);

  const trapKeydown = (e) => {
    if (e.key !== 'Tab') return;
    const nodes = getFocusables(mealModal);
    if (nodes.length === 0) return;
    const first = nodes[0];
    const last  = nodes[nodes.length - 1];
    if (e.shiftKey && document.activeElement === first) {
      e.preventDefault(); last.focus();
    } else if (!e.shiftKey && document.activeElement === last) {
      e.preventDefault(); first.focus();
    }
  };

  const triggerRipple = (e) => {
    clearTimeout(rippleTimeout);
    rippleOverlay.classList.remove('is-rippling');
    const rect = heroSection.getBoundingClientRect();
    const x = (e.clientX ?? (rect.left + rect.width/2)) - rect.left;
    const y = (e.clientY ?? (rect.top  + rect.height/2)) - rect.top;
    rippleOverlay.style.setProperty('--ripple-x', `${x}px`);
    rippleOverlay.style.setProperty('--ripple-y', `${y}px`);
    requestAnimationFrame(() => {
      rippleOverlay.classList.add('is-rippling');
      rippleTimeout = setTimeout(() => {
        rippleOverlay.classList.remove('is-rippling');
      }, 500);
    });
  };

  const openModal = () => {
    clearTimeout(rippleTimeout);
    rippleOverlay.classList.remove('is-rippling');
    mealHotspot.style.display = 'none';
    mealHotspot.style.pointerEvents = 'none';
    mealModal.classList.add('is-visible');
    modalOverlay.classList.add('is-visible');
    document.body.classList.add('modal-open');
    mealModal.setAttribute('aria-hidden', 'false');
    modalOverlay.setAttribute('aria-hidden', 'false');
    const focusables = getFocusables(mealModal);
    (focusables[0] || closeButton).focus();
    document.addEventListener('keydown', trapKeydown);
  };

  const closeModal = () => {
    mealModal.classList.remove('is-visible');
    modalOverlay.classList.remove('is-visible');
    document.body.classList.remove('modal-open');
    mealModal.setAttribute('aria-hidden', 'true');
    modalOverlay.setAttribute('aria-hidden', 'true');
    document.removeEventListener('keydown', trapKeydown);
    setTimeout(() => {
      mealHotspot.style.display = '';
      mealHotspot.style.pointerEvents = 'auto';
      mealHotspot.focus({ preventScroll: true });
    }, 200);
  };

  mealHotspot.addEventListener('pointerdown', (e) => {
    e.preventDefault();
    if (!isCoarse && (e.pointerType === 'mouse' || e.pointerType === 'pen')) {
      triggerRipple(e);
    }
    requestAnimationFrame(openModal);
  }, { passive: false });

  mealHotspot.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      openModal();
    }
  });

  closeButton.addEventListener('click', closeModal);
  modalOverlay.addEventListener('click', closeModal);
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mealModal.classList.contains('is-visible')) {
      closeModal();
    }
  });
});
</script>

