{%- comment -%}
  Hero Section V26.0 — EVERGREEN EDITION
  - Aesthetic: Standard Brand Colors (Red/Black/White).
  - Default Copy: "Fuel Your Ambition".
  - Retains all LCP/SEO/Modal logic.
{%- endcomment -%}

{%- if section.settings.preload_hero -%}
  <link
    rel="preload"
    as="image"
    href="{{ section.settings.desktop_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/ICON-Meals_Desktop-Hero_10.14.25_v2.2.jpg?v=1760531304' }}"
    imagesrcset="
      {{ section.settings.mobile_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/ICON-Meals_DMobile-Hero_10.14.25_v1.jpg?v=1760473296' }} 767w,
      {{ section.settings.desktop_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/ICON-Meals_Desktop-Hero_10.14.25_v2.2.jpg?v=1760531304' }} 1200w
    "
    imagesizes="(max-width:767px) 100vw, 100vw"
    fetchpriority="high"
  >
{%- endif -%}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&display=swap" rel="stylesheet">

<section class="hero22-section" id="home-hero" aria-label="ICON Meals Hero">
  <div class="hero22-background">
  <div class="hero22-ripple-overlay"></div>
    <picture>
      <source
        media="(max-width: 767px)"
        srcset="{{ section.settings.mobile_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/ICON-Meals_DMobile-Hero_10.14.25_v1.jpg?v=1760473296' }}"
        width="768" height="960">
      <source
        media="(min-width: 768px)"
        srcset="{{ section.settings.desktop_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/ICON-Meals_Desktop-Hero_10.14.25_v2.2.jpg?v=1760531304' }}"
        width="1920" height="800">
      <img
        class="hero22-image"
        src="{{ section.settings.desktop_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/ICON-Meals_Desktop-Hero_10.14.25_v2.2.jpg?v=1760531304' }}"
        alt="{{ section.settings.hero_alt | escape | default: 'ICON Meals - Healthy Meal Delivery' }}"
        width="1920" height="800"
        sizes="(max-width:767px) 100vw, 100vw"
        decoding="async"
        fetchpriority="high"
        loading="eager">
    </picture>
    <noscript>
      <img
        src="{{ section.settings.desktop_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/ICON-Meals_Desktop-Hero_10.14.25_v2.2.jpg?v=1760531304' }}"
        alt="{{ section.settings.hero_alt | escape | default: 'ICON Meals - Healthy Meal Delivery' }}"
        width="1920" height="800" class="hero22-image">
    </noscript>
  </div>

  <div class="hero22-content-wrapper">
    <div class="hero22-page-container">
      <div class="hero22-content">
        <!-- CREDIBILITY / BADGE -->
        {%- if section.settings.credibility_text != blank -%}
          <div class="hero22-badge-wrapper">
            <p class="hero22-credibility-tag">{{ section.settings.credibility_text }}</p>
          </div>
        {%- endif -%}

        <!-- HEADLINE -->
        {%- assign tag = section.settings.heading_tag | default: 'h1' -%}
        <{{ tag }} class="hero22-headline">
          {{ section.settings.headline }}
        </{{ tag }}>

        <!-- SUBHEADLINE WITH CODE LOGIC -->
        <div class="hero22-subheadline">
          {{ section.settings.subheadline }}
          {% if section.settings.promo_code != blank %}
            <div class="hero22-code-block">
              <span class="code-label">CODE:</span>
              <span class="code-value">{{ section.settings.promo_code }}</span>
            </div>
          {% endif %}
        </div>

        <div class="hero22-cta-container">
          <a
            href="{{ section.settings.cta_url | default: '/collections/signature-menu' }}"
            class="hero22-button"
            aria-label="{{ section.settings.cta_aria | default: 'Shop the signature menu' }}">
            {{ section.settings.cta_button_text | default: 'SHOP MEALS' }}
            <span class="hero22-button-arrow" aria-hidden="true">→</span>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="hero22-meal-hotspot" role="button" tabindex="0" aria-label="Show details for Chicken Pasta Bowl"></div>

  <!-- MODAL -->
  <div class="hero22-modal-overlay" id="meal-modal-overlay" aria-hidden="true"></div>
  <div class="hero22-modal" id="meal-modal" role="dialog" aria-modal="true" aria-labelledby="meal-modal-title" aria-hidden="true">
    <button type="button" class="hero22-modal-close" aria-label="Close meal details">
      &times;
    </button>
    <div class="hero22-modal-content">
      <h3 id="meal-modal-title" class="hero22-modal-title">Chicken Pasta Bowl</h3>
      <div class="hero22-modal-macros">
        <div class="macro-item"><span>430</span> Calories</div>
        <div class="macro-item"><span>42g</span> Protein</div>
        <div class="macro-item"><span>51g</span> Carbs</div>
        <div class="macro-item"><span>6.0g</span> Fats</div>
        <div class="macro-item"><span>8g</span> Fiber</div>
        <div class="macro-item"><span>220mg</span> Sodium</div>
      </div>
      <p class="hero22-modal-description">Tender chicken breast and al dente chickpea rotini soak up a rich, herb-forward marinara. Crisp green beans add fresh snap, while a touch of cottage cheese melts in for a creamy finish.</p>
      <div class="hero22-modal-ingredients">
        <strong>Main Ingredients:</strong> Tender chicken breast, Chickpea rotini pasta, Rich marinara, Green beans, Creamy cottage cheese.
      </div>
      <a href="https://iconmeals.com/collections/signature-menu/products/chicken-pasta-bowl" class="hero22-modal-button">
        View Meal
        <span class="hero22-button-arrow" aria-hidden="true">→</span>
      </a>
    </div>
  </div>

</section>

