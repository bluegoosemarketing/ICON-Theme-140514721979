<style>
  #hiw {
    /* --- TOKENS & CONFIGURATION --- */
    --color-text: {{ section.settings.color_text | default: '#3d4246' }};
    --color-heading: {{ section.settings.color_heading | default: '#212529' }};
    --color-accent: {{ section.settings.color_accent | default: '#c8102e' }};
    --color-border: rgba(0, 0, 0, 0.08);
    --color-surface: #ffffff;
    --color-surface-alt: #f8f9fa;
    --color-hero-bg: #1a1a1a;
    --color-hero-text: #fdfdfd;
    --hiw-artwork-tint: #7a0e21ff; /* A dark, warm, desaturated version of your brand red */
    --hiw-artwork-opacity: 0.2;

    --space-xs: 0.75rem; --space-s: 1rem; --space-m: 1.5rem; --space-l: 2.5rem; --space-xl: 4.5rem; --space-xxl: 6rem;
    --container-max: var(--page-width, 1200px);
    --gutter: clamp(16px, 5vw, 40px);
    
    /* --- GLOBAL THEME NEUTRALIZATION --- */
    padding: 0; margin: 0; border: none; background: none; box-shadow: none;
    color: var(--color-text);
    background-color: var(--color-surface); /* Default page background */
  }
  #hiw::before, #hiw::after { display: none !important; }
  #hiw *, #hiw *::before, #hiw *::after { box-shadow: none; }

  /* --- LAYOUT PRIMITIVES --- */
  .hiw-v4__inner {
    max-width: var(--container-max, 1200px);
    margin-inline: auto;
    padding-inline: var(--container-gutter, clamp(16px, 5vw, 40px));
  }
  .hiw-v4__section {
    padding-block: clamp(var(--space-l), 8vw, var(--space-xxl));
  }
  .hiw-v4__section--alt-bg {
    background-color: var(--color-surface-alt);
  }
  .hiw-v4-grid--2col {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
    align-items: start;
  }
  @media (min-width: 768px) {
    .hiw-v4-grid--2col {
      grid-template-columns: 1fr 1fr;
    }
  }
  .hiw-v4-stack--xl {
    display: grid;
    gap: clamp(var(--space-xl), 8vw, var(--space-xxl));
  }

  /* --- TYPOGRAPHY --- */
  #hiw h1, #hiw h2, #hiw h3 {
    color: var(--color-heading);
    font-weight: 800;
    line-height: 1.2;
    margin: 0;
  }
  #hiw h1 { font-size: clamp(34px, 5vw, 48px); letter-spacing: -0.04em; }
  #hiw h2 { font-size: clamp(30px, 4vw, 40px); letter-spacing: -0.02em; }
  #hiw h3 { font-size: clamp(22px, 3.5vw, 28px); letter-spacing: -0.01em; }
  .hiw-v4-subheading {
    color: var(--color-accent);
    font-size: clamp(0.8rem, 2vw, 0.9rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
  }
  #hiw .rte { max-width: 65ch; display: grid; gap: var(--space-s); line-height: 1.65; }
  #hiw .rte p { margin: 0; }
  #hiw .rte a { color: var(--color-accent); text-decoration: underline; text-underline-offset: 3px; font-weight: 500; }
  .hiw-v4__centered-content { text-align: center; max-width: 70ch; margin-inline: auto; display: grid; justify-items: center; gap: var(--space-m); }
  .hiw-v4__section-header { margin-bottom: var(--space-xl); }

  /* --- SHARED COMPONENTS (Buttons, etc.) --- */
  #hiw .btn {
    display: inline-block;
    background-color: var(--color-accent) !important;
    color: #ffffff !important;
    border: none !important;
    border-radius: 8px !important;
    padding: var(--space-s) var(--space-l) !important;
    font-size: 1rem !important;
    font-weight: 700 !important;
    text-transform: uppercase !important;
    letter-spacing: 0.05em !important;
    text-decoration: none;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2) !important;
    transition: transform 0.2s ease, filter 0.2s ease;
    cursor: pointer;
  }
  #hiw .btn:hover {
    transform: translateY(-2px);
    filter: brightness(1.1);
  }

  /* --- MEDIA DEFAULTS --- */
  #hiw img, #hiw iframe { max-width: 100%; display: block; }
  
  /* --- [V4] HERO --- */
  .hiw-v4-hero {
    background-color: var(--color-hero-bg);
    color: var(--color-hero-text);
    padding-block: clamp(var(--space-l), 10vw, var(--space-xxl));
  }
  .hiw-v4-hero__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-l);
    align-items: center;
  }
  @media (min-width: 900px) {
    .hiw-v4-hero__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-xl);
    }
  }
  .hiw-v4-hero, .hiw-v4-hero .rte { color: var(--color-hero-text) !important; }
  .hiw-v4-hero__content h1 { color: var(--color-hero-text) !important; }
  .hiw-v4-hero__content { display: grid; gap: var(--space-m); }
  .hiw-v4-hero__video {
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 16px;
    overflow: hidden;
    background-color: #000;
  }
  .hiw-v4-hero__video iframe { width: 100%; height: 100%; border: 0; }

  /* --- [V4] ICON NAV --- */
  .hiw-v4-icon-nav {
    display: grid;
    gap: var(--space-xs);
    align-items: start;
  }
  .hiw-v4-icon-nav a,
  .hiw-v4-icon-nav a:link,
  .hiw-v4-icon-nav a:visited,
  .hiw-v4-icon-nav a:hover,
  .hiw-v4-icon-nav a:active,
  .hiw-v4-icon-nav a:focus {
    text-decoration: none !important;
    background-image: none !important;
    box-shadow: none !important;
  }
  .hiw-v4-icon-nav__header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-block: var(--space-s);
    color: var(--color-heading);
    background: var(--color-surface, #fff);
    position: relative;
    justify-content: center;
  }
  .hiw-v4-icon-nav__header::before,
  .hiw-v4-icon-nav__header::after {
    content: "";
    height: 1px;
    background: var(--color-border, #e9ecef);
    flex: 1 1 auto;
  }
  .hiw-v4-icon-nav__title {
    flex: 0 0 auto;
    font-size: 0.72rem;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    font-weight: 700;
    opacity: 0.68;
    display: inline-flex;
    align-items: center;
    gap: .5rem;
  }
  .hiw-v4-icon-nav__title::before {
    content: "";
    display: inline-block;
    width: 1.25rem;
    height: 2px;
    background: currentColor;
    opacity: .35;
  }
  .hiw-v4-icon-nav__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: var(--space-s);
    padding-block: var(--space-m);
    border-top: 1px solid var(--color-border, #e9ecef);
    border-bottom: 1px solid var(--color-border, #e9ecef);
    background: var(--color-surface, #fff);
  }
  .hiw-v4-icon-nav__item {
    display: flex;
    align-items: center;
    gap: 14px;
    padding: 14px 16px;
    text-decoration: none !important;
    color: var(--color-heading);
    border-radius: 12px;
    border: 1px solid var(--color-border, #e9ecef);
    background: var(--color-surface, #fff);
    transition: transform .06s ease, box-shadow .2s ease, background-color .2s ease, border-color .2s ease;
    cursor: pointer;
  }
  .hiw-v4-icon-nav__item:hover {
    background: var(--color-surface, #fff);
    border-color: transparent;
    box-shadow: 0 8px 22px rgba(0,0,0,.06);
    transform: translateY(-1px);
  }
  .hiw-v4-icon-nav__item:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 3px;
    box-shadow: 0 0 0 4px color-mix(in oklab, var(--color-accent) 24%, transparent);
  }
  .hiw-v4-icon-nav__icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    color: var(--color-accent);
    background: var(--color-surface-alt, #f8f9fa);
    border-radius: 10px;
    display: grid;
    place-items: center;
  }
  .hiw-v4-icon-nav__icon svg { width: 22px; height: 22px; display: block; }
  .hiw-v4-icon-nav__label { font-weight: 700; color: var(--color-heading); line-height: 1.25; }
  @media (max-width: 699px) {
    .hiw-v4-icon-nav__item { padding: 12px 14px; }
    .hiw-v4-icon-nav__icon { width: 36px; height: 36px; border-radius: 8px; }
  }

  /* --- [V4] BACKGROUND ARTWORK --- */
  .hiw-v4__section--with-artwork {
    position: relative;
    z-index: 0;
    overflow: hidden;
    background-color: var(--color-surface-alt);
  }
  .hiw-v4-artwork-layer {
    position: absolute;
    inset: 0;
    z-index: -1;
    pointer-events: none;
  }
  .hiw-v4-artwork-tile {
    position: absolute;
    background-color: var(--hiw-artwork-tint, #e0e0e0);
    opacity: var(--hiw-artwork-opacity, 0.2);
    
    /* --- V8.2 MOBILE RENDER FIX START --- */
    /* To ensure maximum compatibility on iOS devices (which use WebKit), */
    /* we must provide the -webkit- prefix for ALL mask properties. */
    -webkit-mask-image: var(--hiw-artwork-img);
    -webkit-mask-size: clamp(350px, 30vw, 600px);
    -webkit-mask-repeat: repeat;
    -webkit-mask-position: 0 0; /* Explicitly set position */
    -webkit-mask-mode: luminance;
    
    mask-image: var(--hiw-artwork-img);
    mask-size: clamp(350px, 30vw, 600px);
    mask-repeat: repeat;
    mask-position: 0 0; /* Explicitly set position */
    mask-mode: luminance;
    /* --- V8.2 MOBILE RENDER FIX END --- */
  }
  .hiw-v4-artwork-tile--tl { top: 0; left: 0; width: 50%; height: 50%; }
  .hiw-v4-artwork-tile--tr { top: 0; left: 50%; width: 50%; height: 50%; }
  .hiw-v4-artwork-tile--bl { top: 50%; left: 0; width: 50%; height: 50%; }
  .hiw-v4-artwork-tile--br { top: 50%; left: 50%; width: 50%; height: 50%; }
  .hiw-v4-artwork-layer::after {
    content: "";
    position: absolute;
    inset: 0;
    z-index: 2;
    background-image: radial-gradient(circle at center, var(--color-surface-alt) 0%, var(--color-surface-alt) clamp(15%, 35vw, 40%), transparent 100%);
  }
  .hiw-v4__section--art-full .hiw-v4-artwork-layer::after { display: none; }
  .hiw-v4__section--with-artwork > .hiw-v4__inner { position: relative; z-index: 1; }

  /* --- [V4] GUIDED PROCESS --- */
  .hiw-v4-process__header { margin-bottom: var(--space-xl); }
  .hiw-v4__stamp-image {
    position: relative;
    margin-inline: auto;
    width: clamp(200px, 15vw, 200px);
    aspect-ratio: 1/1;
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
  }
  .hiw-v4__stamp-image img {
    border-radius: 50%;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .hiw-v4-process__steps {
    display: grid;
    gap: var(--space-l);
  }
  @media (min-width: 900px) {
    .hiw-v4-process__steps {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      gap: var(--space-l);
    }
  }
  .hiw-v4-process__step {
    background-color: var(--color-surface); 
    border: 1px solid var(--color-border); 
    box-shadow: 0 4px 8px rgba(0,0,0,0.02), 0 10px 25px rgba(0,0,0,0.06);
    border-radius: 16px;
    padding: var(--space-l);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.3s ease;
  }
  .hiw-v4-process__step-header {
    display: flex;
    align-items: center;
    gap: var(--space-m);
    margin-bottom: var(--space-s);
  }
  .hiw-v4-process__step-number {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-accent);
    line-height: 1;
  }
  .hiw-v4-process__step-icon { width: 64px; height: 64px; }
  .hiw-v4-process__step-icon img { width: 100%; height: 100%; object-fit: contain; }
  .hiw-v4-process__step h3 { margin-block: var(--space-s) var(--space-xs); }
  .hiw-v4-process__step .rte { font-size: 0.95rem; max-width: 45ch; margin-inline: auto; }

  /* --- [V4] CTA --- */
  .hiw-v4-cta {
    background-color: #212529;
    color: var(--color-hero-text);
    border-radius: 20px;
    padding: clamp(var(--space-l), 6vw, var(--space-xl));
  }
  .hiw-v4-cta h2 { color: #FFFFFF !important; font-size: clamp(28px,4.2vw,40px); }
  .hiw-v4-cta .rte { color: #adb5bd; }

  /* --- [V5] PRODUCT FEATURES --- */
  .hiw-v5-features__list {
    display: grid;
    gap: clamp(var(--space-xl), 10vw, var(--space-xxl));
  }
  .hiw-v5-feature {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-l);
    align-items: center;
    /* --- V8 EMPHASIS START --- */
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    /* --- V8 EMPHASIS END --- */
  }
  .hiw-v5-feature:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  }
  
  /* --- V8.1 MOBILE PADDING FIX --- */
  @media (max-width: 899px) {
    .hiw-v5-feature {
      /* Use negative margins to break out of parent padding */
      margin-inline: calc(-1 * var(--gutter));
      /* Apply our own padding inside the full-width card */
      padding: var(--space-l) var(--gutter);
       /* On mobile, card is full-width, so no radius needed */
      border-radius: 0;
    }
    /* Only apply border top/bottom on mobile to avoid double side borders */
    .hiw-v5-feature {
      border-inline: none;
    }
  }

  @media (min-width: 900px) {
    .hiw-v5-feature {
      grid-template-columns: 1fr 1fr;
      gap: clamp(var(--space-l), 6vw, var(--space-xl));
      /* --- V8 EMPHASIS START --- */
      padding: var(--space-xl);
      border-radius: 20px; /* Restore radius on desktop */
      /* --- V8 EMPHASIS END --- */
    }
    .hiw-v5-feature--reversed .hiw-v5-feature__media {
      grid-column: 2;
    }
    .hiw-v5-feature--reversed .hiw-v5-feature__content {
      grid-column: 1;
      grid-row: 1;
    }
  }
  .hiw-v5-feature__media {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    aspect-ratio: 1/1;
  }
  .hiw-v5-feature__media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }
  .hiw-v5-feature:hover .hiw-v5-feature__media img {
    transform: scale(1.03);
  }
  .hiw-v5-feature__content {
    display: grid;
    gap: var(--space-m);
    justify-items: start;
    text-align: left;
  }
  .hiw-v5-feature__benefits {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-s);
    margin-top: var(--space-xs);
  }
  .hiw-v5-feature__benefits li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    line-height: 1.5;
  }
  .hiw-v5-feature__benefits svg {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    margin-top: 0.125em;
    color: var(--color-accent);
  }
  .hiw-v5-feature__content .btn {
    margin-top: var(--space-s);
  }

  /* --- [V7] REVISED CATEGORY TILES --- */
  .hiw-v7-categories__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-l);
  }
  .hiw-v7-card {
    display: flex;
    flex-direction: column;
    background-color: var(--color-surface);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    border: 1px solid var(--color-border);
    box-shadow: 0 4px 8px rgba(0,0,0,0.02), 0 10px 25px rgba(0,0,0,0.06);
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }
  .hiw-v7-card:hover { 
    transform: translateY(-5px); 
    box-shadow: 0 8px 15px rgba(0,0,0,0.04), 0 20px 30px rgba(0,0,0,0.08); 
  }
  .hiw-v7-card__media { 
    aspect-ratio: 16 / 9; 
    background-color: var(--color-surface-alt); 
  }
  .hiw-v7-card__media img { 
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
  }
  .hiw-v7-card__content { 
    padding: var(--space-l); 
    text-align: center; 
    display: grid; 
    justify-items: center; 
    gap: var(--space-s); 
    flex-grow: 1; 
  }
  .hiw-v7-card .rte { 
    font-size: 0.95rem; 
  }
  
  /* Neutralize link styles */
  a.hiw-v7-card,
  a.hiw-v7-card:link,
  a.hiw-v7-card:visited,
  a.hiw-v7-card:hover,
  a.hiw-v7-card:active,
  a.hiw-v7-card:focus {
    color: var(--color-text) !important;
    text-decoration: none !important;
  }
  a.hiw-v7-card .hiw-v7-card__content,
  a.hiw-v7-card .hiw-v7-card__content * { color: var(--color-text) !important; text-decoration: none !important; }

  /* --- [V4] FEATURE ROW (Used for Snacks/Environment) --- */
  .hiw-v4-feature {
    display: grid; grid-template-columns: 1fr; gap: var(--space-l); align-items: center;
  }
  @media (min-width: 768px) {
    .hiw-v4-feature { grid-template-columns: repeat(2, 1fr); gap: var(--space-xl); }
    .hiw-v4-feature--reversed .hiw-v4-feature__content { grid-column: 1; grid-row: 1; }
  }
  .hiw-v4-feature__media { aspect-ratio: 4 / 3; border-radius: 16px; overflow: hidden; background-color: var(--color-surface-alt); }
  .hiw-v4-feature__media img { width: 100%; height: 100%; object-fit: cover; }
  .hiw-v4-feature__content { display: grid; justify-items: start; text-align: left; gap: var(--space-m); }
  .hiw-v4-feature__content .btn { margin-top: var(--space-s); }
  
  /* --- [V4] FOOD SAFETY --- */
  .hiw-v4-food-safety__features { display: grid; gap: clamp(var(--space-xl), 8vw, var(--space-xxl)); }
  
  /* --- [V4] FAQ --- */
  .hiw-v4-faq { max-width: 820px; margin-inline: auto; }
  .hiw-v4-faq__list { margin-top: var(--space-l); border-top: 1px solid var(--color-border); }
  .hiw-v4-faq__item { border-bottom: 1px solid var(--color-border); }
  .hiw-v4-faq__item summary { display: flex; justify-content: space-between; align-items: center; gap: var(--space-m); padding: var(--space-m) 0; font-size: clamp(1rem, 3vw, 1.1rem); font-weight: 600; color: var(--color-heading); cursor: pointer; list-style: none; }
  .hiw-v4-faq__item summary::-webkit-details-marker { display: none; }
  .hiw-v4-faq__icon { width: 20px; height: 20px; flex-shrink: 0; transition: transform 0.25s ease; }
  .hiw-v4-faq__item[open] > summary .hiw-v4-faq__icon { transform: rotate(45deg); }
  .hiw-v4-faq__answer { padding-bottom: var(--space-l); }
  .hiw-v4-faq__answer .rte { font-size: 1rem; max-width: none; }

  /* --- [V4] STYLE FIXES --- */
  .hiw-v4-hero .hiw-v4-subheading {
    display: inline-block;
    color: var(--color-hero-text);
    background: rgba(255,255,255,.08);
