<section id="hiw">
  {% comment %}
    THEME EDITOR COMPATIBILITY FIX:
    We use a single master loop to capture the HTML for each block type.
    This makes the "Add block" button appear correctly in the theme editor.
  {% endcomment %}
  {%- liquid
    assign process_step_count = 0
    capture icon_nav_blocks_html
    endcapture
    capture process_step_blocks_html
    endcapture
    capture product_feature_blocks_html
    endcapture
    capture category_tile_blocks_html
    endcapture
    capture safety_feature_blocks_html
    endcapture
    capture faq_item_blocks_html
    endcapture
  -%}

  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'icon_link' -%}
        {%- capture temp -%}
          {{ icon_nav_blocks_html }}
          <a href="{{ block.settings.link | default: '#' }}" class="hiw-v4-icon-nav__item" {{ block.shopify_attributes }}>
