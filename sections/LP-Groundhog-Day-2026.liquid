  assign link_3bag = "/products/protein-popcorn-pantry-stock-3-bag-pack"
  assign link_5bag = "/products/protein-popcorn-pantry-stock-5-bag-pack"
  assign link_10bag = "/products/protein-popcorn-pantry-stock-10-pack"
  
  # Social Share Image Asset
  assign og_image = "https://cdn.shopify.com/s/files/1/1957/2713/files/GHDS-ICON-Meals.png?v=1770039257"
-%}

<!-- Forced Social Meta Tags -->
<meta property="og:image" content="{{ og_image }}">
<meta property="og:image:secure_url" content="{{ og_image }}">
