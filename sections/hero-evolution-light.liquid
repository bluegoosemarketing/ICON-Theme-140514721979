{%- comment -%}
  Section: ICON Meals Hero Evolution (USDA Badge Edition)
  Description: High-performance hero with interactive meal modal and badge overlay.
  Version: Final Production
{%- endcomment -%}

{%- liquid
  assign s = section.settings
  assign meal_image = s.meal_image | default: 'https://cdn.shopify.com/s/files/1/1957/2713/files/Steak-Rice-GB_v1.webp?v=1765725763'
-%}

{%- if s.preload_lcp -%}
  <link rel="preload" as="image" href="{{ meal_image | image_url: width: 800 }}" fetchpriority="high">
{%- endif -%}

<!-- LOAD FONTS -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&family=Teko:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<div class="hero-evo-wrapper">
  <section class="hero-evo-section" aria-label="Hero Section">
    <div class="hero-evo-container">
      
      <!-- LEFT CONTENT -->
      <div class="hero-evo-text">
        <div class="hero-evo-tagline">
          {{ s.tagline }}
        </div>
        
        <h1 class="hero-evo-headline">
          <span class="hero-evo-solid">{{ s.headline_line_1 }}</span>
          <span class="hero-evo-outline">{{ s.headline_line_2 }}</span>
        </h1>

        <div class="hero-evo-desc">
          {{ s.description }}
        </div>

        <div class="hero-evo-cta-group">
          <a href="{{ s.cta_link }}" class="hero-evo-btn">
            {{ s.cta_text }}
          </a>
        </div>
      </div>

      <!-- RIGHT VISUAL -->
      <div class="hero-evo-visual">
        <!-- Anchor Ring -->
        <div class="hero-evo-ring"></div>

        <!-- Meal Image (Hidden Trigger for Modal) -->
        <button type="button" class="hero-evo-meal-trigger" aria-label="View nutrition facts for {{ s.modal_title }}">
          
          <!-- Main Meal Image -->
          {%- if s.meal_image != blank -%}
            {{ s.meal_image | image_url: width: 900 | image_tag: 
               class: 'hero-evo-img', 
               loading: 'eager', 
               fetchpriority: 'high',
               alt: s.modal_title 
            }}
          {%- else -%}
            <img src="https://cdn.shopify.com/s/files/1/1957/2713/files/Steak-Rice-GB_v1.webp?v=1765725763" 
                 alt="Beef Medallions" 
                 class="hero-evo-img" 
                 width="900" 
                 height="700"
                 loading="eager">
          {%- endif -%}

          <!-- USDA BADGE OVERLAY -->
          {%- if s.badge_image != blank -%}
            {{ s.badge_image | image_url: width: 300 | image_tag: class: 'hero-evo-badge', loading: 'eager' }}
          {%- endif -%}

        </button>

        <!-- Tech Spec HUD -->
        <div class="hero-evo-hud">
          <div class="hero-evo-spec">
            <span class="hero-evo-check">✓</span> {{ s.spec_1 }}
          </div>
          <div class="hero-evo-divider"></div>
          <div class="hero-evo-spec">
            <span class="hero-evo-check">✓</span> {{ s.spec_2 }}
          </div>
          <div class="hero-evo-divider"></div>
          <div class="hero-evo-spec">
            <span class="hero-evo-check">✓</span> {{ s.spec_3 }}
          </div>
        </div>
      </div>

    </div>
  </section>

  <!-- BOTTOM DOCK -->
  <div class="hero-evo-dock">
    <div class="hero-evo-grid">
      
      <a href="{{ s.nav_1_link }}" class="hero-evo-card">
        <div class="hero-evo-sub">
          <span class="evo-num">01</span> {{ s.nav_1_sub }}
        </div>
        <div class="hero-evo-title">
          {{ s.nav_1_title }} 
          <span class="hero-evo-arrow">→</span>
        </div>
      </a>
      
      <a href="{{ s.nav_2_link }}" class="hero-evo-card">
        <div class="hero-evo-sub">
          <span class="evo-num">02</span> {{ s.nav_2_sub }}
        </div>
        <div class="hero-evo-title">
          {{ s.nav_2_title }} 
          <span class="hero-evo-arrow">→</span>
        </div>
      </a>
      
      <a href="{{ s.nav_3_link }}" class="hero-evo-card">
        <div class="hero-evo-sub">
          <span class="evo-num">03</span> {{ s.nav_3_sub }}
        </div>
        <div class="hero-evo-title">
          {{ s.nav_3_title }} 
          <span class="hero-evo-arrow">→</span>
        </div>
      </a>

      <a href="{{ s.nav_4_link }}" class="hero-evo-card">
        <div class="hero-evo-sub">
          <span class="evo-num">04</span> {{ s.nav_4_sub }}
        </div>
        <div class="hero-evo-title">
          {{ s.nav_4_title }} 
          <span class="hero-evo-arrow">→</span>
        </div>
      </a>

    </div>
  </div>

  <!-- MODAL (Hidden by default) -->
  <div class="hero-evo-modal-overlay" id="evo-modal-overlay" aria-hidden="true">
    <div class="hero-evo-modal" id="evo-modal" role="dialog" aria-modal="true">
      <button type="button" class="hero-evo-close" aria-label="Close">&times;</button>
      
      <div class="hero-evo-modal-content">
        <h3 class="hero-evo-modal-title">{{ s.modal_title }}</h3>
        
        <div class="hero-evo-macros">
          <div class="evo-macro"><span>{{ s.macro_cal }}</span> Cals</div>
          <div class="evo-macro"><span>{{ s.macro_pro }}</span> Protein</div>
          <div class="evo-macro"><span>{{ s.macro_carb }}</span> Carbs</div>
          <div class="evo-macro"><span>{{ s.macro_fat }}</span> Fats</div>
        </div>

        <p class="hero-evo-modal-desc">{{ s.modal_desc }}</p>
        
        <div class="hero-evo-ingredients">
          <strong>Ingredients:</strong> {{ s.modal_ingredients }}
        </div>

        <a href="{{ s.modal_link }}" class="hero-evo-modal-btn">
          View Meal Details →
        </a>
      </div>
    </div>
  </div>

</div>

<style>
/* ─────────────────────────────────────────────────────────────
   ICON MEALS: HERO EVOLUTION (FINAL PRODUCTION)
   Namespace: .hero-evo-*
   ───────────────────────────────────────────────────────────── */

:root {
  /* COLORS - WARM KITCHEN MODE */
  --evo-bg-center: #FFFFFF;
  --evo-bg-edge: #F5F2EE;  /* Warm Bone/Cream */
  
  --evo-text-main: #0a0a0a;
  --evo-text-sub: #4a4a4a;
  --evo-red: #D11F1F;
  --evo-hud-bg: #2C2A29;   /* Warm Charcoal */
  
  /* FONTS */
  --evo-font-head: 'Teko', sans-serif;
  --evo-font-body: 'Inter', sans-serif;
}

.hero-evo-wrapper {
  width: 100% !important;
  overflow: hidden !important;
  position: relative !important;
  background-color: var(--evo-bg-edge) !important;
}

/* --- MAIN SECTION --- */
.hero-evo-section {
  position: relative !important;
  min-height: 75vh !important;
  display: flex !important;
  align-items: center !important;
  background: radial-gradient(circle at 75% 50%, var(--evo-bg-center) 0%, var(--evo-bg-edge) 85%) !important;
}

.hero-evo-container {
  width: 100% !important; 
  max-width: 1600px !important;
  padding: 0 40px !important;
  margin: 0 auto !important;
  
  display: grid !important;
  grid-template-columns: 1fr 1.2fr !important;
  align-items: stretch !important;
  position: relative !important;
  z-index: 2 !important;
}

/* --- LEFT COLUMN --- */
.hero-evo-text {
  padding-left: 0 !important; 
  padding-right: 4rem !important;
  display: flex !important;
  flex-direction: column !important;
  justify-content: center !important;
  padding-top: 6rem !important;
  padding-bottom: 8rem !important;
}

.hero-evo-tagline {
  color: var(--evo-red) !important;
  font-family: var(--evo-font-body) !important;
  font-weight: 700 !important;
  text-transform: uppercase !important;
  letter-spacing: 3px !important;
  font-size: 0.9rem !important;
  margin-bottom: 1.5rem !important;
  display: block !important;
  line-height: 1 !important;
}

.hero-evo-headline {
  font-family: var(--evo-font-head) !important;
  font-size: clamp(4rem, 8vw, 9rem) !important;
  line-height: 0.85 !important;
  text-transform: uppercase !important;
  margin: 0 0 2.5rem 0 !important;
  color: var(--evo-text-main) !important;
  font-weight: 700 !important;
}

.hero-evo-solid { display: block; }
.hero-evo-outline {
  color: transparent !important;
  -webkit-text-stroke: 2px #222 !important; 
  display: block !important;
  filter: drop-shadow(0 2px 0px rgba(0,0,0,0.1));
}

.hero-evo-desc {
  font-family: var(--evo-font-body) !important;
  color: var(--evo-text-sub) !important;
  font-size: 1.15rem !important;
  line-height: 1.7 !important;
  max-width: 520px !important;
  margin-bottom: 3rem !important;
  border-left: 3px solid var(--evo-red) !important;
  padding-left: 1.8rem !important;
}

.hero-evo-btn {
  background-color: var(--evo-red) !important;
  color: white !important;
  font-family: var(--evo-font-body) !important;
  padding: 1.4rem 3.5rem !important;
  text-transform: uppercase !important;
  font-weight: 800 !important;
  letter-spacing: 1px !important;
  text-decoration: none !important;
  display: inline-block !important;
  transition: all 0.3s ease !important;
  box-shadow: 0 10px 20px rgba(209, 31, 31, 0.3) !important;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
  white-space: nowrap !important;
}
.hero-evo-btn:hover {
  background-color: #000 !important;
  transform: translateY(-2px);
  text-decoration: none !important;
}

/* --- RIGHT COLUMN --- */
.hero-evo-visual {
  position: relative !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  flex-direction: column !important;
}

.hero-evo-ring {
  position: absolute; top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 550px; height: 550px;
  border: 1px solid rgba(209, 31, 31, 0.15) !important; 
  border-radius: 50%;
  z-index: 1;
  pointer-events: none;
}
.hero-evo-ring::after {
  content: ''; position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 480px; height: 480px;
  border: 1px dashed rgba(0,0,0,0.2) !important;
  border-radius: 50%;
}

/* Interactive Meal Trigger */
.hero-evo-meal-trigger {
  background: none; border: none; padding: 0; cursor: pointer;
  position: relative; z-index: 5;
  transition: transform 0.3s ease;
  margin-bottom: 0.5rem; 
  text-decoration: none !important;
}
.hero-evo-meal-trigger:focus { outline: none; }
.hero-evo-meal-trigger:hover {
  transform: rotate(0deg) scale(1.02);
}

.hero-evo-img {
  width: 100%;
  max-width: 680px;
  height: auto;
  object-fit: contain;
  filter: drop-shadow(0 40px 60px rgba(60, 50, 40, 0.2)) !important; 
  transform: rotate(-3deg);
  transition: transform 0.5s ease;
}
.hero-evo-meal-trigger:hover .hero-evo-img {
  transform: rotate(0deg);
}

/* --- BADGE OVERLAY --- */
.hero-evo-badge {
  position: absolute;
  top: 2%;   /* ~10% down relative to image container */
  right: 18%; /* ~15-20% from right */
  width: 18%; /* Responsive width */
  max-width: 130px; 
  height: auto;
  z-index: 6; 
  filter: drop-shadow(0 4px 10px rgba(0,0,0,0.15));
  pointer-events: none; /* Let clicks pass through to the trigger */
}

/* --- HUD (GLASS AURA) --- */
.hero-evo-hud {
  position: relative; z-index: 10;
  display: flex; align-items: center; gap: 2rem;
  padding: 1rem 2rem;
  
  background: rgba(255, 255, 255, 0.65) !important; 
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  border: 1px solid rgba(255, 255, 255, 0.9);
  border-radius: 50px;
  box-shadow: 0 15px 40px rgba(0,0,0,0.06);
  
  animation: slideUp 1s ease-out forwards;
}
@keyframes slideUp { from { opacity:0; transform:translateY(20px); } to { opacity:1; transform:translateY(0); } }

.hero-evo-spec {
  display: flex; align-items: center; gap: 0.6rem;
  color: var(--evo-text-main) !important; 
  font-family: var(--evo-font-body);
  font-size: 0.8rem; font-weight: 700; text-transform: uppercase; letter-spacing: 1px;
}
.hero-evo-check { color: var(--evo-red); font-size: 1rem; }
.hero-evo-divider { width: 1px; height: 20px; background: rgba(0,0,0,0.1); }

/* --- BOTTOM DOCK --- */
.hero-evo-dock {
  background-color: #FFFFFF !important;
  width: 100%; border-top: 4px solid var(--evo-red) !important;
  position: relative; z-index: 50;
  box-shadow: 0 -10px 30px rgba(0,0,0,0.05);
}
.hero-evo-grid {
  display: grid; 
  grid-template-columns: repeat(4, 1fr); 
  max-width: 1700px;
  margin: 0 auto;
}
.hero-evo-card {
  padding: 2.5rem;
  color: var(--evo-text-main) !important;
  text-decoration: none !important;
  border-right: 1px solid #e5e5e5;
  transition: background 0.2s;
  display: flex; flex-direction: column; justify-content: center;
  height: 180px;
}
.hero-evo-card:last-child { border-right: none; }
.hero-evo-card:hover { background: #f8f8f8 !important; }

/* REFINED SUB-TEXT (Numbers) */
.hero-evo-sub {
  font-family: var(--evo-font-body); 
  font-size: 0.85rem; 
  text-transform: uppercase; 
  color: #888;
  letter-spacing: 1px; 
  font-weight: 600; 
  margin-bottom: 8px;
  display: flex; 
  align-items: center; 
  gap: 8px; 
}

.evo-num {
  font-family: var(--evo-font-head);
  color: var(--evo-red);
  font-size: 1.4rem; 
  line-height: 1;
  font-weight: 600;
  position: relative;
  top: 1px;
}

.hero-evo-title {
  font-family: var(--evo-font-head); font-size: 2.2rem;
  text-transform: uppercase; color: var(--evo-text-main); line-height: 1;
  display: flex; align-items: center; justify-content: space-between;
}

/* ARROW (Always Visible) */
.hero-evo-arrow { 
  color: #d1d5db; 
  opacity: 1;     
  transition: all 0.2s ease; 
  transform: translateX(0); 
  font-family: sans-serif;
}
.hero-evo-card:hover .hero-evo-arrow { 
  opacity: 1; 
  color: var(--evo-red); 
  transform: translateX(5px); 
}

/* --- MODAL --- */
.hero-evo-modal-overlay {
  position: fixed; inset: 0; z-index: 9998;
  background: rgba(0,0,0,0.6);
  backdrop-filter: blur(5px);
  opacity: 0; visibility: hidden; transition: all 0.3s ease;
  display: flex; align-items: center; justify-content: center;
}
.hero-evo-modal-overlay.is-visible { opacity: 1; visibility: visible; }
.hero-evo-modal {
  background: #fff; width: 90%; max-width: 600px;
  border-radius: 20px; padding: 0;
  position: relative;
  transform: scale(0.9); opacity: 0; transition: all 0.3s ease;
  box-shadow: 0 25px 50px rgba(0,0,0,0.3);
}
.hero-evo-modal-overlay.is-visible .hero-evo-modal { transform: scale(1); opacity: 1; }
.hero-evo-close {
  position: absolute; top: 15px; right: 20px;
  background: none; border: none; font-size: 2rem; cursor: pointer; color: #888;
}
.hero-evo-modal-content { padding: 40px; }
.hero-evo-modal-title {
  font-family: var(--evo-font-head); font-size: 2.5rem; text-transform: uppercase; margin: 0 0 20px; line-height: 1;
}
.hero-evo-macros {
  display: flex; gap: 20px; border-bottom: 1px solid #eee; padding-bottom: 20px; margin-bottom: 20px;
}
.evo-macro { font-family: var(--evo-font-body); font-size: 0.8rem; text-transform: uppercase; color: #666; }
.evo-macro span { display: block; font-size: 1.5rem; font-weight: 800; color: #000; }
.hero-evo-ingredients { background: #f5f5f5; padding: 15px; font-size: 0.9rem; margin: 20px 0; border-radius: 8px; font-family: var(--evo-font-body); }
.hero-evo-modal-btn {
  display: block; width: 100%; text-align: center;
  background: var(--evo-red); color: white; padding: 15px; text-decoration: none !important;
  font-weight: 800; text-transform: uppercase; border-radius: 8px;
}

/* --- MOBILE RESPONSIVE --- */
@media (max-width: 1024px) {
  .hero-evo-section { height: auto !important; padding: 2.5rem 0 3rem; }
  .hero-evo-container { grid-template-columns: 1fr !important; text-align: center; width: 100% !important; padding: 0 20px !important;}
  .hero-evo-text { padding: 0 0 2.5rem 0 !important; align-items: center; }
  .hero-evo-tagline { text-align: center !important; margin-bottom: 1rem !important; }
  .hero-evo-headline { margin-bottom: 1.5rem !important; }
  .hero-evo-desc { border-left: none !important; border-top: none !important; padding: 0 !important; margin: 0 auto 2rem auto !important; text-align: center; max-width: 100% !important; }
  
  .hero-evo-btn {
    white-space: nowrap !important;
    width: 100% !important;
    max-width: 380px; 
    padding: 1.4rem 2rem !important;
  }
  
  .hero-evo-meal-trigger { width: 95% !important; margin: 0 auto 1rem; }
  
  /* Badge adjustments for mobile */
  .hero-evo-badge { top: 0%; right: 5%; width: 25%; max-width: 90px; }

  .hero-evo-hud { width: 100%; flex-direction: column; gap: 0.8rem; border-radius: 20px; padding: 1.5rem; }
  .hero-evo-divider { width: 50px; height: 1px; background: rgba(0,0,0,0.1); }
  
  .hero-evo-grid { grid-template-columns: 1fr; }
  .hero-evo-card { height: auto; padding: 1.5rem; border-bottom: 1px solid #eee; border-right: none; }
  .hero-evo-ring { width: 320px; height: 320px; }
  .hero-evo-ring::after { width: 280px; height: 280px; }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const trigger = document.querySelector('.hero-evo-meal-trigger');
  const overlay = document.getElementById('evo-modal-overlay');
  const closeBtn = document.querySelector('.hero-evo-close');
  
  if(trigger && overlay && closeBtn) {
    trigger.addEventListener('click', function(e) {
      e.preventDefault();
      overlay.classList.add('is-visible');
      document.body.style.overflow = 'hidden'; 
    });
    
    function closeModal() {
      overlay.classList.remove('is-visible');
      document.body.style.overflow = '';
    }
    
    closeBtn.addEventListener('click', closeModal);
    overlay.addEventListener('click', function(e) {
      if(e.target === overlay) closeModal();
    });
    document.addEventListener('keydown', function(e) {
      if(e.key === 'Escape' && overlay.classList.contains('is-visible')) {
        closeModal();
      }
    });
  }
});
</script>

