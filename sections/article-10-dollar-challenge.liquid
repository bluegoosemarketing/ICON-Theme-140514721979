<style>
/* ─────────────────────────────────────────────────────────────
   ICON INVESTIGATIVE REPORT v2 (SCOPED STYLES)
   ───────────────────────────────────────────────────────────── */

/* 1. RESET & VARIABLES */
#icon-investigative-report {
  --ir-bg: #f4f4f4;
  --ir-dark: #111111;
  --ir-red: #D11F1F;
  --ir-text: #222222;
  --ir-font-head: 'Teko', sans-serif;
  --ir-font-body: 'Inter', sans-serif;
  --ir-font-mono: 'Roboto Mono', monospace;
  
  font-family: var(--ir-font-body) !important;
  color: var(--ir-text) !important;
  line-height: 1.5 !important;
  background-color: var(--ir-bg);
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}

#icon-investigative-report * {
  box-sizing: border-box;
}

#icon-investigative-report a { text-decoration: none; color: inherit; transition: 0.2s; }
#icon-investigative-report strong { font-weight: 800; }

/* 2. LAYOUT UTILITIES */
.ir-container {
  max-width: 1200px; margin: 0 auto; padding: 0 20px;
}
.ir-section {
  padding: 80px 0;
}
.ir-white-bg { background: #ffffff; }
.ir-dark-bg { background: var(--ir-dark); color: #ffffff; }
.ir-grid-50-50 {
  display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center;
}
.ir-grid-50-50-img-left {
    display: grid; grid-template-columns: 0.8fr 1.2fr; gap: 60px; align-items: center;
}
.ir-center-text { text-align: center; margin-bottom: 50px; }
.ir-max-600 { max-width: 600px; margin: 0 auto; }
.ir-light-text { color: #eeeeee !important; }

/* Responsiveness Utilities */
.mobile-only { display: none; }
.desktop-only { display: block; }


/* 3. TYPOGRAPHY */
.ir-eyebrow {
  font-family: var(--ir-font-mono); font-size: 0.9rem; letter-spacing: 1px;
  color: var(--ir-red); text-transform: uppercase; margin-bottom: 10px; font-weight: 700;
}
.ir-headline {
  font-family: var(--ir-font-head); font-size: clamp(4rem, 8vw, 7rem);
  line-height: 0.85; text-transform: uppercase; margin: 0 0 15px 0;
  color: var(--ir-dark); font-weight: 700;
}
.ir-red { color: var(--ir-red); }
.ir-subhead {
  font-size: 1.3rem; max-width: 700px; color: #555; font-weight: 500; margin: 0; line-height: 1.3;
}

.ir-header { padding: 80px 0 60px; border-bottom: 1px solid #ddd; }

#icon-investigative-report h3 {
  font-family: var(--ir-font-head); font-size: 3rem; line-height: 1;
  text-transform: uppercase; margin: 0 0 20px 0; color: inherit;
}
#icon-investigative-report p {
  font-size: 1.1rem; line-height: 1.6; margin-bottom: 20px; color: inherit; font-weight: 400;
}

/* IMAGES */
.ir-saturate {
    width: 100%; height: auto; border-radius: 12px;
    filter: saturate(1.1) contrast(1.1);
    box-shadow: 10px 10px 0px rgba(0,0,0,0.1);
}
.ir-meal-img {
    width: 100%; height: auto; border-radius: 12px 12px 0 0; display: block;
}

/* 4. DATA CARD (TABLE REPLACEMENT - FIXED FOOTER) */
.ir-data-card {
  border: 2px solid #000; background: #fff; padding: 0;
  box-shadow: 10px 10px 0px rgba(0,0,0,0.1); margin-top: 30px;
}
.ir-card-header {
  background: #000; color: #fff; padding: 15px 20px;
  font-family: var(--ir-font-head); font-weight: 600; text-transform: uppercase;
  font-size: 1.4rem; letter-spacing: 1px;
}
.ir-comparison-row {
  display: grid; grid-template-columns: 1.2fr 1fr 1fr;
  border-bottom: 1px solid #eee; font-family: var(--ir-font-head); font-size: 1.3rem;
}
.ir-row-labels {
    background: #f0f0f0; font-size: 1rem; color: #666;
}
.ir-col-header {
    padding: 10px; text-align: center; font-weight: 700; color: #000;
}
.ir-comparison-row:last-of-type { border-bottom: none; }
.ir-comp-label {
  padding: 15px 20px; font-weight: 600; color: #333; background: #fafafa;
  border-right: 1px solid #eee; display: flex; align-items: center; font-family: var(--ir-font-body); font-size: 0.9rem; text-transform: uppercase;
}
.ir-comp-val {
  padding: 15px 10px; text-align: center; display: flex; align-items: center; justify-content: center;
}
.ir-bad { color: #999; text-decoration: line-through; }
.ir-good { color: var(--ir-red); font-weight: 700; }
.ir-neutral { color: #555; }


/* 5. THE RECEIPT & MEAL SECTION */
.ir-receipt-wrapper {
  display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: start;
}

/* Meal Card */
.ir-meal-card {
    border: 2px solid #333; border-radius: 14px; background: #000;
    margin-bottom: 30px;
}
.ir-meal-meta {
    padding: 15px 20px; color: #fff; font-family: var(--ir-font-head);
    font-size: 1.4rem; display: flex; justify-content: space-between;
}

/* Receipt */
.ir-receipt {
  background: #fff; color: #000; padding: 40px;
  font-family: var(--ir-font-mono); font-size: 0.9rem;
  box-shadow: 0 20px 50px rgba(0,0,0,0.3);
  transform: rotate(-2deg); position: relative;
}
.ir-receipt::after {
  content: ''; position: absolute; bottom: -10px; left: 0; width: 100%; height: 20px;
  background: radial-gradient(circle, transparent 50%, #fff 50%) 0 0/20px 20px repeat-x;
  transform: rotate(180deg);
}
.ir-receipt-header { text-align: center; margin-bottom: 20px; font-weight: 700; color: #333; }
.ir-receipt-body { margin-bottom: 20px; }
.ir-item { margin-bottom: 12px; border-bottom: 1px dashed #ddd; padding-bottom: 8px; }
.ir-item-name { font-weight: 700; text-transform: uppercase; }
.ir-item-price { float: right; font-weight: 700; }
.ir-item-waste { 
  display: block; color: var(--ir-red); font-size: 0.8rem; margin-top: 4px; font-weight: 700; 
}
.ir-total-row {
  display: flex; justify-content: space-between; font-size: 1.4rem; font-weight: 700; margin: 10px 0; border-top: 2px solid #000; padding-top: 10px;
}
.ir-waste-row {
  display: flex; justify-content: space-between; color: var(--ir-red); font-weight: 700; margin-bottom: 10px;
}
.ir-barcode {
  font-family: 'Libre Barcode 39', cursive; /* Fallback if not loaded */
  text-align: center; font-size: 2rem; letter-spacing: -2px; margin-top: 20px; opacity: 0.5;
}

.ir-receipt-commentary { margin-top: 30px; }
.ir-receipt-commentary h4 {
  font-family: var(--ir-font-head); color: #fff; font-size: 2.5rem; margin: 0 0 15px 0;
}
.ir-receipt-commentary p { color: #ccc; }
.ir-link { color: var(--ir-red) !important; text-decoration: underline !important; }

/* 6. BUTTONS & QUOTES */
.ir-btn {
  display: inline-block; background: var(--ir-red); color: #fff !important;
  font-family: var(--ir-font-head); font-size: 1.5rem; padding: 15px 30px;
  text-transform: uppercase; font-weight: 700; margin-top: 20px;
  clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
}
.ir-btn:hover { background: #fff; color: var(--ir-red) !important; }
.ir-btn-outline { background: transparent; border: 2px solid var(--ir-dark); color: var(--ir-dark) !important; }
.ir-btn-outline:hover { background: var(--ir-dark); color: #fff !important; }

.ir-quote-box {
  border-left: 5px solid var(--ir-red); padding-left: 30px;
  font-size: 1.5rem; font-style: italic; color: #333; font-weight: 600;
  margin-bottom: 30px;
}

/* 7. MOBILE RESPONSIVENESS */
@media (max-width: 900px) {
  .ir-headline { font-size: 4rem; }
  .ir-container { padding: 0 15px; }
  
  .ir-grid-50-50, 
  .ir-grid-50-50-img-left,
  .ir-receipt-wrapper { 
      grid-template-columns: 1fr; gap: 40px; 
  }

  /* Swap image order on mobile */
  .ir-grid-50-50-img-left .ir-img-col { order: -1; }

  /* Table adjustments */
  .ir-comparison-row { font-size: 1.1rem; }
  .ir-comp-label { padding: 10px; font-size: 0.8rem; }
  .ir-col-header { font-size: 0.8rem; }

  /* Receipt adjustments */
  .ir-receipt { transform: rotate(0deg); width: 100%; }
  .ir-center-text { text-align: left; }

  /* Show/Hide commentary based on placement */
  .desktop-only { display: none; }
  .mobile-only { display: block; }
}
</style>

