<style>
.iconmeals-custom-layout {
  background-color: #fff;
  padding: 60px 20px;
}

.iconmeals-container {
  max-width: 1200px;
  margin: auto;
  text-align: center;
}

.iconmeals-section-heading {
  font-size: 2rem;
  font-weight: bold;
  color: #e63946;
  margin-bottom: 40px;
}

.iconmeals-row {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.iconmeals-column {
  flex: 1 1 30%;
  max-width: 30%;
  text-align: center;
  margin-bottom: 20px;
}

.iconmeals-image-container img {
  width: 100%;
  max-width: 200px;
  margin-bottom: 10px;
}

.iconmeals-column-title {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 10px;
}

.iconmeals-column-text {
  font-size: 1rem;
  color: #666;
}

.iconmeals-divider {
  width: 1px;
  background-color: #d3d3d3;
  margin: 0 10px;
}

@media (max-width: 768px) {
  .iconmeals-row {
    flex-direction: column;
  }

  .iconmeals-column {
    max-width: 100%;
  }

  .iconmeals-divider {
    display: none;
  }
}
</style>

