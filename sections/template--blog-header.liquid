<div class="blog-page__a11y-header">
  <h1 class="sr-only">{{ blog.title }}</h1>
  {% if current_tags %}
    <p class="sr-only">{{ 'blogs.article.tags' | t }}: {{ current_tags | join: ', ' }}</p>
  {% endif %}
</div>

{% schema %}
{
  "name": {
    "en": "Blog header"
  },
  "class": "template--blog_header",
  "settings": [
    {
      "type": "paragraph",
      "content": "This block controls the position of the blog title."
    }
  ],
  "presets": [
    {
      "name": {
          "en": "Blog header"
      },
      "category": {
          "en": "Blog"
      }
    }
  ],
  "templates": ["blog"]
}
{% endschema %}