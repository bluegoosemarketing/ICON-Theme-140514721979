    }
  }

  .ship-safety-section .ss-section {
    margin-bottom: 3.5rem;
  }
  
  .ship-safety-section .ss-section h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--brand-dark);
    text-align: center;
    margin: 0 0 2.5rem 0;
  }

