    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  /* --- Image Gallery --- */
  .ship-safety-section .ss-image-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin-top: 2.5rem;
