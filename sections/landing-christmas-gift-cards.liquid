<script>
  document.addEventListener('DOMContentLoaded', () => {
    // 1. Timer Logic
    const xmas = new Date(2025, 11, 25); 
    function tick() {
      const now = new Date();
      const diff = xmas - now;
      if(diff <= 0) return;
      document.getElementById('v6-d').innerText = Math.floor(diff / 864e5).toString().padStart(2, '0');
      document.getElementById('v6-h').innerText = Math.floor((diff / 36e5) % 24).toString().padStart(2, '0');
      document.getElementById('v6-m').innerText = Math.floor((diff / 6e4) % 60).toString().padStart(2, '0');
    }
    setInterval(tick, 1000); tick();

    // 2. Promo Auto-Expiry Logic (Dec 23, 11:59PM)
    const promoBanner = document.getElementById('js-promo-banner');
    if (promoBanner) {
      const expirationDate = new Date('2025-12-24T00:00:00'); 
      const currentTime = new Date();
      if (currentTime < expirationDate) {
        promoBanner.style.setProperty('display', 'block', 'important');
      } else {
        promoBanner.remove(); 
      }
    }

    // 3. Selection Logic
    let selId = null;
    const opts = document.querySelectorAll('.js-v6-opt');
    const btn = document.querySelector('.js-v6-btn');
    const notif = document.querySelector('.js-v6-notif');

    opts.forEach(o => {
      o.addEventListener('click', () => {
        opts.forEach(x => x.classList.remove('active'));
        o.classList.add('active');
        selId = o.dataset.vid;
        btn.disabled = false;
        notif.style.display = 'none';
      });
    });

    // 4. AJAX Cart Logic
    btn.addEventListener('click', async () => {
      const originalText = "Gift Instantly â€” Add to Cart";
      btn.innerText = "ADDING...";
      btn.disabled = true;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items: [{ id: Number(selId), quantity: 1 }] })
        });
        
        if(response.ok) {
          btn.innerText = "ADDED! ðŸŽ…";
          btn.classList.add('success');
          notif.style.display = 'block';
          
          const cart = await (await fetch('/cart.js')).json();
          document.dispatchEvent(new CustomEvent('cart:updated', { detail: { cart } }));

          setTimeout(() => {
            btn.innerText = originalText;
            btn.classList.remove('success');
            btn.disabled = false;
          }, 3000);
          
        } else {
          btn.innerText = "ERROR";
          setTimeout(() => { btn.innerText = originalText; btn.disabled = false; }, 2000);
        }
      } catch (e) {
        btn.innerText = "TRY AGAIN";
        setTimeout(() => { btn.innerText = originalText; btn.disabled = false; }, 2000);
      }
    });
  });
</script>

